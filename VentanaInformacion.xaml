<Window x:Class="TPV_Hosteleria.VentanaInformacion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TPV_Hosteleria"
        mc:Ignorable="d"
        Title="Acerca del TPV" Height="500" Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F4F7F6">

    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryColor" Color="#FF6F00"/>
        <SolidColorBrush x:Key="AccentColor" Color="#0078D7"/>
        <SolidColorBrush x:Key="DarkText" Color="#333333"/>
        <SolidColorBrush x:Key="LightText" Color="#777777"/>
        <SolidColorBrush x:Key="CardBackground" Color="White"/>
    </Window.Resources>

    <Grid Background="White" Margin="1">
        <Grid.Effect>
            <DropShadowEffect Color="#000000" Direction="0" ShadowDepth="0" BlurRadius="20" Opacity="0.1"/>
        </Grid.Effect>
        
        <StackPanel Margin="40" VerticalAlignment="Top">
            <!-- Icono de información -->
            <TextBlock Text="ℹ️" 
                      FontSize="80" 
                      HorizontalAlignment="Center"
                      Margin="0,10,0,30"/>

            <!-- Versión de la App -->
            <TextBlock Text="App TPV versión 1.0" 
                      FontSize="22" 
                      FontWeight="Bold"
                      HorizontalAlignment="Center" 
                      Foreground="{StaticResource PrimaryColor}"
                      Margin="0,0,0,30"/>
            
            <!-- Autores -->
            <TextBlock Text="Autores:" 
                      FontSize="16" 
                      FontWeight="Bold"
                      HorizontalAlignment="Center" 
                      Foreground="{StaticResource DarkText}"
                      Margin="0,0,0,15"/>
            
            <TextBlock Text="Alberto Cortés Herranz" 
                      FontSize="15" 
                      HorizontalAlignment="Center" 
                      Foreground="{StaticResource LightText}"
                      Margin="0,0,0,8"/>
            
            <TextBlock Text="Jesús Márquez Duque" 
                      FontSize="15" 
                      HorizontalAlignment="Center" 
                      Foreground="{StaticResource LightText}"
                      Margin="0,0,0,8"/>
            
            <TextBlock Text="Iván Jesús Mora García" 
                      FontSize="15" 
                      HorizontalAlignment="Center" 
                      Foreground="{StaticResource LightText}"/>
        </StackPanel>
    </Grid>
</Window>
