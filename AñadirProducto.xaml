<Window x:Class="TPV_Hosteleria.AñadirProducto"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
xmlns:local="clr-namespace:TPV_Hosteleria"
mc:Ignorable="d"
Title="Gestión de productos" Height="580" Width="700"
WindowStartupLocation="CenterScreen"
Background="#F4F7F6">

    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryColor" Color="#FF6F00"/>
        <SolidColorBrush x:Key="DarkText" Color="#333333"/>
        <SolidColorBrush x:Key="LightText" Color="#777777"/>
    </Window.Resources>

    <Grid Background="White" Margin="1">
        <Grid.Effect>
            <DropShadowEffect Color="#000000" Direction="0" ShadowDepth="0" BlurRadius="20" Opacity="0.1"/>
        </Grid.Effect>

        <Label x:Name="lblNombreProducto" Content="Nombre: " HorizontalAlignment="Left" Margin="181,28,0,0" VerticalAlignment="Top" FontSize="16" Height="38" Width="95" Foreground="{StaticResource DarkText}" FontWeight="SemiBold"/>

        <!-- Imagen del producto con borde redondeado -->
        <Border CornerRadius="8" Width="163" Height="161" Margin="10,28,0,0" 
        HorizontalAlignment="Left" VerticalAlignment="Top" 
        BorderBrush="#DDDDDD" BorderThickness="2"
        Background="#F0F0F0">
            <Image x:Name="imgProducto" Stretch="UniformToFill" Loaded="cargarImagen"/>
        </Border>

        <Label x:Name="lblCategoriaProducto" Content="Categoría:" HorizontalAlignment="Left" Margin="181,95,0,0" VerticalAlignment="Top" FontSize="16" Foreground="{StaticResource DarkText}" FontWeight="SemiBold"/>
        <Label x:Name="lblSubcategoriaProducto" Content="Subcategoría:" HorizontalAlignment="Left" Margin="181,155,0,0" VerticalAlignment="Top" FontSize="16" Foreground="{StaticResource DarkText}" FontWeight="SemiBold"/>
        <TextBox x:Name="txtNombreProducto" HorizontalAlignment="Left" Margin="300,28,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="380" Height="38" FontSize="16" Background="#F5F5F5" BorderBrush="#DDDDDD" Foreground="{StaticResource DarkText}"/>
        <ComboBox x:Name="cbxCategoriaProducto" HorizontalAlignment="Left" Margin="300,95,0,0" VerticalAlignment="Top" Width="380" Height="36" FontSize="16" Background="#F5F5F5" BorderBrush="#DDDDDD" Foreground="{StaticResource DarkText}" SelectionChanged="cbxCategoriaProducto_SelectionChanged">
            <ComboBoxItem Content="🥗 Entrantes"/>
            <ComboBoxItem Content="🍖 Platos"/>
            <ComboBoxItem Content="🍰 Postres"/>
            <ComboBoxItem Content="🥤 Bebidas"/>
        </ComboBox>
        <ComboBox x:Name="cbxSubcategoriaProducto" HorizontalAlignment="Left" Margin="300,162,0,0" VerticalAlignment="Top" Width="380" Height="36" FontSize="16" Background="#F5F5F5" BorderBrush="#DDDDDD" Foreground="{StaticResource DarkText}">
            <ComboBoxItem Content="Ensaladas"/>
            <ComboBoxItem Content="Huevos"/>
            <ComboBoxItem Content="Arroces y Pastas"/>
            <ComboBoxItem Content="Asados"/>
            <ComboBoxItem Content="Pescados"/>
        </ComboBox>
        <Label x:Name="lblPrecio" Content="Precio:" HorizontalAlignment="Left" Margin="10,241,0,0" VerticalAlignment="Top" Width="70" FontSize="16" Foreground="{StaticResource DarkText}" FontWeight="SemiBold"/>
        <TextBox x:Name="txtPrecio" HorizontalAlignment="Left" Margin="75,246,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="88" BorderBrush="#DDDDDD" Background="#F5F5F5" Height="31" FontSize="16" Foreground="{StaticResource DarkText}"/>
        <Label x:Name="lblEuros" Content="€" HorizontalAlignment="Left" Margin="168,241,0,0" VerticalAlignment="Top" FontSize="16" Foreground="{StaticResource PrimaryColor}" FontWeight="Bold"/>

        <Separator Margin="10,296,10,0" Background="#EEEEEE" VerticalAlignment="Top" Height="2"/>

        <Label x:Name="lblIngredientes" Content="Ingredientes principales:" HorizontalAlignment="Left" Margin="10,313,0,0" VerticalAlignment="Top" FontSize="16" Foreground="{StaticResource DarkText}" FontWeight="SemiBold"/>
        <TextBox x:Name="txtIngredientes" 
                 HorizontalAlignment="Left" 
                 Margin="235,313,0,0" 
                 VerticalAlignment="Top" 
                 Width="445" 
                 Height="36"
                 FontSize="16" 
                 BorderBrush="#DDDDDD" 
                 Background="#F5F5F5"
                 Foreground="{StaticResource DarkText}"
                 TextWrapping="NoWrap"
                 HorizontalScrollBarVisibility="Auto"
                 VerticalScrollBarVisibility="Disabled"/>

        <Label x:Name="lblAlergenos" Content="Alérgenos:" HorizontalAlignment="Left" Margin="18,363,0,0" VerticalAlignment="Top" FontSize="16" Foreground="{StaticResource DarkText}" FontWeight="SemiBold"/>

        <!-- Primera fila de CheckBoxes -->
        <CheckBox x:Name="chkPescado" Content="Pescado" HorizontalAlignment="Left" Margin="158,378,0,0" VerticalAlignment="Top" FontSize="14" Foreground="{StaticResource DarkText}" VerticalContentAlignment="Center"/>
        <CheckBox x:Name="chkGluten" Content="Gluten" HorizontalAlignment="Left" Margin="318,378,0,0" VerticalAlignment="Top" FontSize="14" Foreground="{StaticResource DarkText}" VerticalContentAlignment="Center"/>
        <CheckBox x:Name="chkHuevos" Content="Huevos" HorizontalAlignment="Left" Margin="478,378,0,0" VerticalAlignment="Top" FontSize="14" Foreground="{StaticResource DarkText}" VerticalContentAlignment="Center"/>

        <!-- Segunda fila de CheckBoxes -->
        <CheckBox x:Name="chkMaiz" Content="Maíz" HorizontalAlignment="Left" Margin="158,418,0,0" VerticalAlignment="Top" FontSize="14" Foreground="{StaticResource DarkText}" VerticalContentAlignment="Center"/>
        <CheckBox x:Name="chkFrutosSecos" Content="Frutos secos" HorizontalAlignment="Left" Margin="318,418,0,0" VerticalAlignment="Top" FontSize="14" Foreground="{StaticResource DarkText}" VerticalContentAlignment="Center"/>
        <CheckBox x:Name="chkLacteos" Content="Lácteos" HorizontalAlignment="Left" Margin="478,418,0,0" VerticalAlignment="Top" FontSize="14" Foreground="{StaticResource DarkText}" VerticalContentAlignment="Center"/>
        
        <Separator Margin="10,455,10,0" Background="#EEEEEE" VerticalAlignment="Top" Height="2"/>
        
        <!-- Botones de acción -->
        <Button x:Name="btnCancelar" Content="CANCELAR" Width="120" Height="50" FontSize="18" FontWeight="Bold" BorderThickness="0" Cursor="Hand" Click="btnCancelar_Click" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,143,10" Foreground="White" Background="{StaticResource PrimaryColor}">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="8"/>
                </Style>
            </Button.Resources>
            <Button.Effect>
                <DropShadowEffect Color="#FF6F00" BlurRadius="15" ShadowDepth="5" Opacity="0.3"/>
            </Button.Effect>
        </Button>
        <Button x:Name="btnGuardar" Content="GUARDAR" Width="120" Height="50" FontSize="18" FontWeight="Bold" BorderThickness="0" Cursor="Hand" Click="btnGuardar_Click" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,10" Foreground="White" Background="{StaticResource PrimaryColor}">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="8"/>
                </Style>
            </Button.Resources>
            <Button.Effect>
                <DropShadowEffect Color="#FF6F00" BlurRadius="15" ShadowDepth="5" Opacity="0.3"/>
            </Button.Effect>
        </Button>
        <Canvas>
            <Button x:Name="btnCargarImagen" Content="✏️" Background="{DynamicResource PrimaryColor}" Foreground="White" BorderThickness="0" FontWeight="Bold" FontSize="16" Cursor="Hand" ToolTip="Añadir imagen del producto" Height="35" Width="38" VerticalContentAlignment="Center"  HorizontalContentAlignment="Center" Canvas.Left="133" Canvas.Top="198" Click="btnCargarImagen_click">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="8"/>
                    </Style>
                </Button.Resources>
            </Button>
        </Canvas>
    </Grid>
</Window>
