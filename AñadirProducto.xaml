<Window x:Class="TPV_Hosteleria.AñadirProducto"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TPV_Hosteleria"
        mc:Ignorable="d"
        Title="Gestión de productos" Height="550" Width="800">
    <Grid>
        <Label x:Name="lblNombreProducto" Content="Nombre: " HorizontalAlignment="Left" Margin="181,71,0,0" VerticalAlignment="Top" FontSize="24" Height="38" Width="112" RenderTransformOrigin="0.769,-0.719" FontFamily="Segoe UI"/>
        <Image x:Name="imgProducto" HorizontalAlignment="Left" Height="161" Margin="10,28,0,0" VerticalAlignment="Top" Width="163" RenderTransformOrigin="0.489,0.48" Stretch="Fill" Loaded="cargarImagen"/>
        <Label x:Name="lblCategoriaProducto" Content="Categoría:" HorizontalAlignment="Left" Margin="181,112,0,0" VerticalAlignment="Top" FontSize="24"/>
        <Label x:Name="libSubcategoriaProducto" Content="Subcategoría:" HorizontalAlignment="Left" Margin="181,155,0,0" VerticalAlignment="Top" FontSize="24"/>
        <Label x:Name="lblEuros" Content="€" HorizontalAlignment="Left" Margin="184,229,0,0" VerticalAlignment="Top" FontSize="24" FontFamily="Comic Sans MS"/>
        <TextBox HorizontalAlignment="Left" Margin="354,71,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="252" Height="38" FontSize="24" Background="{x:Null}"/>
        <TextBox x:Name="txtCategoriaProducto" HorizontalAlignment="Left" Margin="354,119,0,0" TextWrapping="Wrap" VerticalAlignment="Top" TextAlignment="Center" Width="252" Height="36" IsHitTestVisible="False" FontSize="24" Background="{x:Null}"/>
        <TextBox x:Name="txtSubcategoriaProducto" HorizontalAlignment="Left" Margin="354,162,0,0" TextWrapping="Wrap" VerticalAlignment="Top" TextAlignment="Center" Width="252" Height="36" IsHitTestVisible="False" FontSize="24" Background="{x:Null}"/>
        <TextBox x:Name="txtPrecio" HorizontalAlignment="Left" Margin="86,235,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="88" SelectionOpacity="0" BorderBrush="#FFABADB3" Background="{x:Null}" Height="31" FontSize="24" IsEnabled="False"/>
        <Label x:Name="lblPrecio" Content="Precio:" HorizontalAlignment="Left" Margin="0,229,0,0" VerticalAlignment="Top" Width="86" FontSize="24"/>
        <Label x:Name="lblIngredientes" Content="Ingredientes principales:" HorizontalAlignment="Left" Margin="4,277,0,0" VerticalAlignment="Top" FontSize="24"/>
        <ComboBox x:Name="cbxIngredientes" HorizontalAlignment="Left" Margin="310,288,0,0" VerticalAlignment="Top" Width="412" FontSize="16"/>
        <Label x:Name="lblAlergenos" Content="Alérgenos:" HorizontalAlignment="Left" Margin="10,380,0,0" VerticalAlignment="Top" FontSize="24"/>
        <CheckBox x:Name="chkGluten" Content="Gluten" HorizontalAlignment="Left" Margin="225,397,0,0" VerticalAlignment="Top" FontSize="20"/>
        <CheckBox x:Name="chkLacteos" Content="Lácteos" HorizontalAlignment="Left" Margin="516,444,0,0" VerticalAlignment="Top" FontSize="20"/>
        <CheckBox x:Name="chkFrutosSecos" Content="Frutos secos" HorizontalAlignment="Left" Margin="354,444,0,0" VerticalAlignment="Top" FontSize="20"/>
        <CheckBox x:Name="chkMaiz" Content="Maiz" HorizontalAlignment="Left" Margin="225,444,0,0" VerticalAlignment="Top" FontSize="20"/>
        <CheckBox x:Name="chkHuevos" Content="Huevos" HorizontalAlignment="Left" Margin="480,397,0,0" VerticalAlignment="Top" FontSize="20"/>
        <CheckBox x:Name="chkPescado" Content="Pescado" HorizontalAlignment="Center" Margin="0,397,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Button x:Name="btnGuardar" Content="GUARDAR" FontSize="18" FontWeight="Bold" BorderThickness="0" Cursor="Hand" Click="btnGuardar_Click" Margin="599,486,108,2" Foreground="White" Background="#FFFF6F00">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="8"/>
                </Style>
            </Button.Resources>
            <Button.Effect>
                <DropShadowEffect Color="#FF6F00" BlurRadius="15" ShadowDepth="5" Opacity="0.3"/>
            </Button.Effect>
        </Button>
        <Button x:Name="btnCancelar" Content="CANCELAR" FontSize="18" FontWeight="Bold" BorderThickness="0" Cursor="Hand" Click="btnCancelar_Click" Margin="697,486,10,2" Foreground="White" Background="#FFFF6F00">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="8"/>
                </Style>
            </Button.Resources>
            <Button.Effect>
                <DropShadowEffect Color="#FF6F00" BlurRadius="15" ShadowDepth="5" Opacity="0.3"/>
            </Button.Effect>
        </Button>
        <Button Content="✏️" Background="#757575" Foreground="White" BorderThickness="0" FontWeight="Bold" FontSize="14" Cursor="Hand" ToolTip="Editar cliente" Margin="138,195,627,304" RenderTransformOrigin="0.68,0.735">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
        </Button>

    </Grid>
</Window>
