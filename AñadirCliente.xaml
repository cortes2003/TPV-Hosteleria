<Window x:Class="TPV_Hosteleria.AñadirCliente"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:TPV_Hosteleria"
    mc:Ignorable="d"
    Title="Gestión de clientes" Height="520" Width="700"
    WindowStartupLocation="CenterScreen"
    ResizeMode="NoResize"
    Background="#F4F7F6">

<Window.Resources>
    <SolidColorBrush x:Key="PrimaryColor" Color="#FF6F00"/>
    <SolidColorBrush x:Key="DarkText" Color="#333333"/>
    <SolidColorBrush x:Key="LightText" Color="#777777"/>
    
    <!-- Estilo para los botones de información con efecto hover naranja -->
    <Style x:Key="InfoButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="#E8E8E8"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Foreground" Value="{StaticResource DarkText}"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="15">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect Color="#FF6F00" BlurRadius="10" ShadowDepth="0" Opacity="0.6"/>
                    </Setter.Value>
                </Setter>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Estilo para los botones de pago (efectivo/tarjeta) con efecto hover naranja -->
    <Style x:Key="BotonPagoStyle" TargetType="Button">
        <Setter Property="Background" Value="White"/>
        <Setter Property="BorderBrush" Value="#DDDDDD"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Foreground" Value="{StaticResource DarkText}"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="8">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect Color="#FF6F00" BlurRadius="15" ShadowDepth="0" Opacity="0.7"/>
                    </Setter.Value>
                </Setter>
            </Trigger>
        </Style.Triggers>
    </Style>
</Window.Resources>

<Grid Background="White" Margin="1">
    <Grid.Effect>
        <DropShadowEffect Color="#000000" Direction="0" ShadowDepth="0" BlurRadius="20" Opacity="0.1"/>
    </Grid.Effect>
        <!-- Nombre y apellidos -->
        <Label x:Name="lblNombreApellidosCliente" Content="Nombre y apellidos:" HorizontalAlignment="Left" Margin="20,30,0,0" VerticalAlignment="Top" FontSize="16" Height="36" Width="180" Foreground="{StaticResource DarkText}" FontWeight="SemiBold"/>
        <TextBox x:Name="txtNombreApellidosCliente" 
                 HorizontalAlignment="Left" 
                 Height="36" 
                 Margin="210,30,0,0" 
                 TextWrapping="NoWrap" 
                 VerticalAlignment="Top" 
                 Width="450" 
                 FontSize="16" 
                 Background="#F5F5F5" 
                 BorderBrush="#DDDDDD" 
                 Foreground="{StaticResource DarkText}"
                 HorizontalScrollBarVisibility="Auto"
                 VerticalScrollBarVisibility="Disabled"/>
        
        <!-- Teléfono -->
        <Label x:Name="lblTelefonosClientes" Content="Teléfono(s):" HorizontalAlignment="Left" Margin="20,80,0,0" VerticalAlignment="Top" FontSize="16" Height="36" Width="180" Foreground="{StaticResource DarkText}" FontWeight="SemiBold"/>
        <TextBox x:Name="txtTelefonosCliente" 
                 HorizontalAlignment="Left" 
                 Height="36" 
                 Margin="210,80,0,0" 
                 TextWrapping="NoWrap" 
                 VerticalAlignment="Top" 
                 Width="410" 
                 FontSize="16" 
                 Background="#F5F5F5" 
                 BorderBrush="#DDDDDD" 
                 Foreground="{StaticResource DarkText}"
                 HorizontalScrollBarVisibility="Auto"
                 VerticalScrollBarVisibility="Disabled"/>
        <Button x:Name="btnInfoTelefono" 
                Content="ⓘ" 
                Width="30" 
                Height="30" 
                HorizontalAlignment="Left" 
                Margin="630,83,0,0" 
                VerticalAlignment="Top"
                Style="{StaticResource InfoButtonStyle}"
                ToolTipService.ShowDuration="10000"
                ToolTipService.InitialShowDelay="300">
            <Button.ToolTip>
                <ToolTip>
                    <StackPanel>
                        <TextBlock Text="Mínimo: 1 teléfono" FontSize="12"/>
                        <TextBlock Text="Máximo: 2 teléfonos" FontSize="12"/>
                        <TextBlock Text="Separe los números con comas" FontSize="12" FontStyle="Italic"/>
                    </StackPanel>
                </ToolTip>
            </Button.ToolTip>
        </Button>
        
        <!-- Email -->
        <Label x:Name="lblEmailCliente" Content="Email(s):" HorizontalAlignment="Left" Margin="20,130,0,0" VerticalAlignment="Top" FontSize="16" Height="36" Width="180" Foreground="{StaticResource DarkText}" FontWeight="SemiBold"/>
        <TextBox x:Name="txtEmailsCliente" 
                 HorizontalAlignment="Left" 
                 Height="36" 
                 Margin="210,130,0,0" 
                 TextWrapping="NoWrap" 
                 VerticalAlignment="Top" 
                 Width="410" 
                 FontSize="16" 
                 Background="#F5F5F5" 
                 BorderBrush="#DDDDDD" 
                 Foreground="{StaticResource DarkText}"
                 HorizontalScrollBarVisibility="Auto"
                 VerticalScrollBarVisibility="Disabled"/>
        <Button x:Name="btnInfoEmail" 
                Content="ⓘ" 
                Width="30" 
                Height="30" 
                HorizontalAlignment="Left" 
                Margin="630,133,0,0" 
                VerticalAlignment="Top"
                Style="{StaticResource InfoButtonStyle}"
                ToolTipService.ShowDuration="10000"
                ToolTipService.InitialShowDelay="300">
            <Button.ToolTip>
                <ToolTip>
                    <StackPanel>
                        <TextBlock Text="Mínimo: 1 email" FontSize="12"/>
                        <TextBlock Text="Máximo: 2 emails" FontSize="12"/>
                        <TextBlock Text="Separe las direcciones con comas" FontSize="12" FontStyle="Italic"/>
                    </StackPanel>
                </ToolTip>
            </Button.ToolTip>
        </Button>
        
        <!-- Dirección -->
        <Label x:Name="lblDireccionCliente" Content="Dirección:" HorizontalAlignment="Left" Margin="20,180,0,0" VerticalAlignment="Top" FontSize="16" Height="36" Width="180" Foreground="{StaticResource DarkText}" FontWeight="SemiBold"/>
        <TextBox x:Name="txtDireccionCliente" 
                 HorizontalAlignment="Left" 
                 Height="36" 
                 Margin="210,180,0,0" 
                 TextWrapping="NoWrap" 
                 VerticalAlignment="Top" 
                 Width="410" 
                 FontSize="16" 
                 Background="#F5F5F5" 
                 BorderBrush="#DDDDDD" 
                 Foreground="{StaticResource DarkText}"
                 HorizontalScrollBarVisibility="Auto"
                 VerticalScrollBarVisibility="Disabled"/>
        <Button x:Name="btnInfoDireccion" 
                Content="ⓘ" 
                Width="30" 
                Height="30" 
                HorizontalAlignment="Left" 
                Margin="630,183,0,0" 
                VerticalAlignment="Top"
                Style="{StaticResource InfoButtonStyle}"
                ToolTipService.ShowDuration="10000"
                ToolTipService.InitialShowDelay="300">
            <Button.ToolTip>
                <ToolTip>
                    <StackPanel>
                        <TextBlock Text="Mínimo: 1 dirección" FontSize="12"/>
                        <TextBlock Text="Máximo: 2 direcciones" FontSize="12"/>
                        <TextBlock Text="Separe las direcciones con comas" FontSize="12" FontStyle="Italic"/>
                    </StackPanel>
                </ToolTip>
            </Button.ToolTip>
        </Button>
        
        <Separator Margin="10,230,10,0" Background="#EEEEEE" VerticalAlignment="Top" Height="2"/>
        
        <!-- Forma de pago -->
        <Label x:Name="lblPagoCliente" Content="Método de pago:" HorizontalAlignment="Left" Margin="20,245,0,0" VerticalAlignment="Top" FontSize="16" Height="36" Width="180" Foreground="{StaticResource DarkText}" FontWeight="SemiBold"/>
        <Grid HorizontalAlignment="Left" Margin="210,245,0,0" VerticalAlignment="Top" Width="450">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button x:Name="btnEfectivo" Content="💶 Efectivo" Grid.Column="0" HorizontalAlignment="Stretch" Margin="0,0,5,0" Height="36" Style="{StaticResource BotonPagoStyle}" Click="btnEfectivo_Click"/>
            <Button x:Name="btnTarjeta" Content="💳 Tarjeta" Grid.Column="1" HorizontalAlignment="Stretch" Margin="5,0,0,0" Height="36" Style="{StaticResource BotonPagoStyle}" Click="btnTarjeta_Click"/>
        </Grid>
        
        <!-- Puntos acumulados -->
        <Label x:Name="lblPuntosCliente" Content="Puntos acumulados:" HorizontalAlignment="Left" Margin="20,295,0,0" VerticalAlignment="Top" FontSize="16" Height="36" Width="180" Foreground="{StaticResource DarkText}" FontWeight="SemiBold"/>
        <TextBox x:Name="txtPuntosCliente" HorizontalAlignment="Left" Height="36" Margin="210,295,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="450" FontSize="16" Background="#F5F5F5" BorderBrush="#DDDDDD" Foreground="{StaticResource DarkText}"/>
        <Separator Margin="10,345,10,0" Background="#EEEEEE" VerticalAlignment="Top" Height="2"/>
        
        <!-- Alergias -->
        <Label x:Name="lblAlergiasCliente" Content="Alergias:" HorizontalAlignment="Left" Margin="20,363,0,0" VerticalAlignment="Top" FontSize="16" Foreground="{StaticResource DarkText}" FontWeight="SemiBold"/>
        
        <!-- Primera fila de CheckBoxes -->
        <CheckBox x:Name="chkPescado" Content="Pescado" HorizontalAlignment="Left" Margin="110,378,0,0" VerticalAlignment="Top" FontSize="14" Foreground="{StaticResource DarkText}" VerticalContentAlignment="Center"/>
        <CheckBox x:Name="chkGluten" Content="Gluten" HorizontalAlignment="Left" Margin="225,378,0,0" VerticalAlignment="Top" FontSize="14" Foreground="{StaticResource DarkText}" VerticalContentAlignment="Center"/>
        <CheckBox x:Name="chkHuevos" Content="Huevos" HorizontalAlignment="Left" Margin="330,378,0,0" VerticalAlignment="Top" FontSize="14" Foreground="{StaticResource DarkText}" VerticalContentAlignment="Center"/>
        
        <!-- Segunda fila de CheckBoxes -->
        <CheckBox x:Name="chkMaiz" Content="Maíz" HorizontalAlignment="Left" Margin="110,410,0,0" VerticalAlignment="Top" FontSize="14" Foreground="{StaticResource DarkText}" VerticalContentAlignment="Center"/>
        <CheckBox x:Name="chkFrutosSecos" Content="Frutos secos" HorizontalAlignment="Left" Margin="225,410,0,0" VerticalAlignment="Top" FontSize="14" Foreground="{StaticResource DarkText}" VerticalContentAlignment="Center"/>
        <CheckBox x:Name="chkLacteos" Content="Lácteos" HorizontalAlignment="Left" Margin="330,410,0,0" VerticalAlignment="Top" FontSize="14" Foreground="{StaticResource DarkText}" VerticalContentAlignment="Center"/>
        <!-- Botones de acción -->
        <Button x:Name="btnCancelar" Content="CANCELAR" Width="120" Height="50" FontSize="18" FontWeight="Bold" BorderThickness="0" Cursor="Hand" Click="btnCancelar_Click" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,143,10" Foreground="White" Background="{StaticResource PrimaryColor}">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="8"/>
                </Style>
            </Button.Resources>
            <Button.Effect>
                <DropShadowEffect Color="#FF6F00" BlurRadius="15" ShadowDepth="5" Opacity="0.3"/>
            </Button.Effect>
        </Button>
        <Button x:Name="btnGuardar" Content="GUARDAR" Width="120" Height="50" FontSize="18" FontWeight="Bold" BorderThickness="0" Cursor="Hand" Click="btnGuardar_Click" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,10" Foreground="White" Background="{StaticResource PrimaryColor}">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="8"/>
                </Style>
            </Button.Resources>
            <Button.Effect>
                <DropShadowEffect Color="#FF6F00" BlurRadius="15" ShadowDepth="5" Opacity="0.3"/>
            </Button.Effect>
        </Button>
    </Grid>
</Window>