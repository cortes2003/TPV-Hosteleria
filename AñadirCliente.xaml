<Window x:Class="TPV_Hosteleria.AñadirCliente"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:TPV_Hosteleria"
    mc:Ignorable="d"
    Title="Gestión de clientes" Height="600" Width="943"
    WindowStartupLocation="CenterScreen"
    Background="#F4F7F6">

<Window.Resources>
    <SolidColorBrush x:Key="PrimaryColor" Color="#FF6F00"/>
    <SolidColorBrush x:Key="DarkText" Color="#333333"/>
    <SolidColorBrush x:Key="LightText" Color="#777777"/>
</Window.Resources>

<Grid Background="White" Margin="1,1,0,1">
    <Grid.Effect>
        <DropShadowEffect Color="#000000" Direction="0" ShadowDepth="0" BlurRadius="20" Opacity="0.1"/>
    </Grid.Effect>
        <!-- Nombre y apellidos -->
        <Label x:Name="lblNombreApellidosCliente" Content="Nombre y apellidos:" HorizontalAlignment="Left" Margin="50,50,0,0" VerticalAlignment="Top" FontSize="22" Height="40" Width="220" Foreground="{StaticResource DarkText}" FontWeight="SemiBold"/>
        <TextBox x:Name="txtNombreApellidosCliente" HorizontalAlignment="Left" Height="40" Margin="280,50,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="520" FontSize="20" Background="#F5F5F5" BorderBrush="#DDDDDD" Foreground="{StaticResource DarkText}"/>
        
        <!-- Teléfono -->
        <Label x:Name="lblTelefonosClientes" Content="Teléfono(s):" HorizontalAlignment="Left" Margin="50,110,0,0" VerticalAlignment="Top" FontSize="22" Height="40" Width="220" Foreground="{StaticResource DarkText}" FontWeight="SemiBold"/>
        <TextBox x:Name="txtTelefonosCliente" HorizontalAlignment="Left" Height="40" Margin="280,110,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="250" FontSize="20" Background="#F5F5F5" BorderBrush="#DDDDDD" Foreground="{StaticResource DarkText}"/>
        
        <!-- Email -->
        <Label x:Name="lblEmailCliente" Content="Email(s):" HorizontalAlignment="Left" Margin="50,170,0,0" VerticalAlignment="Top" FontSize="22" Height="40" Width="220" Foreground="{StaticResource DarkText}" FontWeight="SemiBold"/>
        <TextBox x:Name="txtEmailsCliente" HorizontalAlignment="Left" Height="40" Margin="280,170,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="520" FontSize="20" Background="#F5F5F5" BorderBrush="#DDDDDD" Foreground="{StaticResource DarkText}"/>
        
        <!-- Dirección -->
        <Label x:Name="lblDireccionCliente" Content="Dirección:" HorizontalAlignment="Left" Margin="50,230,0,0" VerticalAlignment="Top" FontSize="22" Height="40" Width="220" Foreground="{StaticResource DarkText}" FontWeight="SemiBold"/>
        <TextBox x:Name="txtDireccionCliente" HorizontalAlignment="Left" Height="40" Margin="280,230,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="520" FontSize="20" Background="#F5F5F5" BorderBrush="#DDDDDD" Foreground="{StaticResource DarkText}"/>
        
        <Separator Margin="20,290,20,0" Background="#EEEEEE" VerticalAlignment="Top" Height="2"/>
        
        <!-- Forma de pago -->
        <Label x:Name="lblPagoCliente" Content="Forma de pago:" HorizontalAlignment="Left" Margin="50,310,0,0" VerticalAlignment="Top" FontSize="22" Height="40" Width="220" Foreground="{StaticResource DarkText}" FontWeight="SemiBold"/>
        <ComboBox x:Name="cbxFormasPagoCliente" HorizontalAlignment="Left" Margin="280,310,0,0" VerticalAlignment="Top" Width="250" Height="40" Padding="10,8" BorderBrush="#DDDDDD" FontSize="16" Foreground="{StaticResource DarkText}" SelectedIndex="1">
            <ComboBoxItem Content="💶 Efectivo"/>
            <ComboBoxItem Content="💳 Tarjeta"/>
        </ComboBox>
        
        <!-- Puntos acumulados -->
        <Label x:Name="lblPuntosCliente" Content="Puntos acumulados:" HorizontalAlignment="Left" Margin="50,370,0,0" VerticalAlignment="Top" FontSize="22" Height="40" Width="220" Foreground="{StaticResource DarkText}" FontWeight="SemiBold"/>
        <TextBox x:Name="txtPuntosCliente" HorizontalAlignment="Left" Height="40" Margin="280,370,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150" FontSize="20" Background="#F5F5F5" BorderBrush="#DDDDDD" Foreground="{StaticResource DarkText}"/>
        <Separator Margin="20,430,20,0" Background="#EEEEEE" VerticalAlignment="Top" Height="2"/>
        
        <!-- Alergias -->
        <Label x:Name="lblAlergiasCliente" Content="Alergias:" HorizontalAlignment="Left" Margin="50,450,0,0" VerticalAlignment="Top" FontSize="22" Height="40" Width="220" Foreground="{StaticResource DarkText}" FontWeight="SemiBold"/>
        
        <!-- Primera fila de CheckBoxes -->
        <CheckBox x:Name="chkPescado" Content="Pescado" HorizontalAlignment="Left" Margin="180,465,0,0" VerticalAlignment="Top" FontSize="20" Foreground="{StaticResource DarkText}" VerticalContentAlignment="Center"/>
        <CheckBox x:Name="chkGluten" Content="Gluten" HorizontalAlignment="Left" Margin="340,465,0,0" VerticalAlignment="Top" FontSize="20" Foreground="{StaticResource DarkText}" VerticalContentAlignment="Center"/>
        <CheckBox x:Name="chkHuevos" Content="Huevos" HorizontalAlignment="Left" Margin="500,465,0,0" VerticalAlignment="Top" FontSize="20" Foreground="{StaticResource DarkText}" VerticalContentAlignment="Center"/>
        
        <!-- Segunda fila de CheckBoxes -->
        <CheckBox x:Name="chkMaiz" Content="Maíz" HorizontalAlignment="Left" Margin="180,505,0,0" VerticalAlignment="Top" FontSize="20" Foreground="{StaticResource DarkText}" VerticalContentAlignment="Center"/>
        <CheckBox x:Name="chkFrutosSecos" Content="Frutos secos" HorizontalAlignment="Left" Margin="340,505,0,0" VerticalAlignment="Top" FontSize="20" Foreground="{StaticResource DarkText}" VerticalContentAlignment="Center"/>
        <CheckBox x:Name="chkLacteos" Content="Lácteos" HorizontalAlignment="Left" Margin="500,505,0,0" VerticalAlignment="Top" FontSize="20" Foreground="{StaticResource DarkText}" VerticalContentAlignment="Center"/>
        <!-- Botones de acción -->
        <Button x:Name="btnGuardar" Content="GUARDAR" Width="120" Height="50" FontSize="18" FontWeight="Bold" BorderThickness="0" Cursor="Hand" Click="btnGuardar_Click" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,140,10" Foreground="White" Background="{StaticResource PrimaryColor}">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="8"/>
                </Style>
            </Button.Resources>
            <Button.Effect>
                <DropShadowEffect Color="#FF6F00" BlurRadius="15" ShadowDepth="5" Opacity="0.3"/>
            </Button.Effect>
        </Button>
        <Button x:Name="btnCancelar" Content="CANCELAR" Width="120" Height="50" FontSize="18" FontWeight="Bold" BorderThickness="0" Cursor="Hand" Click="btnCancelar_Click" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,10" Foreground="White" Background="{StaticResource PrimaryColor}">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="8"/>
                </Style>
            </Button.Resources>
            <Button.Effect>
                <DropShadowEffect Color="#FF6F00" BlurRadius="15" ShadowDepth="5" Opacity="0.3"/>
            </Button.Effect>
        </Button>
    </Grid>
</Window>