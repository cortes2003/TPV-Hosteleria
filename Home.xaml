                            <Grid Margin="0,15,0,0">
                                <!-- Grid productos de Bebidas -->
                                <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="-10">
                                    <WrapPanel Orientation="Horizontal" Margin="10">

                                        <!-- ItemsControl para generar tarjetas de productos dinámicamente -->
                                        <ItemsControl x:Name="itemsBebidas">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <WrapPanel Orientation="Horizontal"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Style="{StaticResource ProductCardStyle}">
                                                        <Grid>
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition Height="*"/>
                                                                <RowDefinition Height="Auto"/>
                                                            </Grid.RowDefinitions>
                                                            <Grid Grid.Row="0" Margin="15">
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="90"/>
                                                                    <ColumnDefinition Width="*"/>
                                                                </Grid.ColumnDefinitions>
                                                                <Border Grid.Column="0" CornerRadius="8" Background="#F0F0F0">
                                                                    <Image Source="{Binding RutaImagen}" Width="80" Height="80" Stretch="UniformToFill" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                </Border>
                                                                <StackPanel Grid.Column="1" Margin="15,0,0,0">
                                                                    <TextBlock Text="{Binding Nombre}" FontWeight="Bold" FontSize="16" TextWrapping="Wrap" Foreground="{StaticResource DarkText}"/>
                                                                    <TextBlock Text="{Binding Descripcion}" FontSize="11" Foreground="{StaticResource LightText}" TextWrapping="Wrap" Margin="0,5,0,0"/>
                                                                    <!-- Alérgenos -->
                                                                    <ItemsControl ItemsSource="{Binding Alergenos}" Margin="0,8,0,0">
                                                                        <ItemsControl.ItemsPanel>
                                                                            <ItemsPanelTemplate>
                                                                                <StackPanel Orientation="Horizontal"/>
                                                                            </ItemsPanelTemplate>
                                                                        </ItemsControl.ItemsPanel>
                                                                        <ItemsControl.ItemTemplate>
                                                                            <DataTemplate>
                                                                                <Border Background="#FFEBEE" CornerRadius="4" Padding="5,2" Margin="0,0,5,0">
                                                                                    <TextBlock Text="{Binding}" FontSize="10" Foreground="#D32F2F"/>
                                                                                </Border>
                                                                            </DataTemplate>
                                                                        </ItemsControl.ItemTemplate>
                                                                    </ItemsControl>
                                                                </StackPanel>
                                                            </Grid>
                                                            <Grid Grid.Row="1" Margin="15,0,15,15">
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                    <ColumnDefinition Width="*"/>
                                                                </Grid.ColumnDefinitions>
                                                                <TextBlock Text="{Binding PrecioFormateado}" FontSize="18" FontWeight="Bold" Foreground="{StaticResource PrimaryColor}" VerticalAlignment="Center"/>
                                                                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                                                                    <Button Content="🛒" Style="{StaticResource ActionIconButtonStyle}" Foreground="#757575" Tag="{Binding}" Click="btnAñadirProducto_Click"/>
                                                                    <Button Content="👁️" Style="{StaticResource ActionIconButtonStyle}" Foreground="#757575" Tag="{Binding}" Click="btnVerProducto_Click"/>
                                                                    <Button Content="🗑️" Style="{StaticResource ActionIconButtonStyle}" Foreground="#D32F2F" Tag="{Binding}" Click="btnEliminarProducto_Click"/>
                                                                </StackPanel>
                                                            </Grid>
                                                        </Grid>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>

                                        <!-- Botón añadir -->
                                        <Button Width="240" Height="160" Margin="10" Background="White" BorderBrush="#DDDDDD" Cursor="Hand" Click="btnAñadirNuevoProducto_Click">
                                            <Button.Template>
                                                <ControlTemplate TargetType="{x:Type Button}">
                                                    <Grid>
                                                        <Rectangle Stroke="{TemplateBinding BorderBrush}" StrokeThickness="2" StrokeDashArray="4 4" RadiusX="10" RadiusY="10" Fill="{TemplateBinding Background}"/>
                                                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                                            <TextBlock Text="+" FontSize="40" Foreground="#AAAAAA" HorizontalAlignment="Center"/>
                                                            <TextBlock Text="Añadir Producto" FontSize="14" Foreground="#AAAAAA" FontWeight="SemiBold" Margin="0,5,0,0"/>
                                                        </StackPanel>
                                                    </Grid>
                                                </ControlTemplate>
                                            </Button.Template>
                                        </Button>

                                    </WrapPanel>
                                </ScrollViewer>
                            </Grid>
                        </TabItem>

                    </TabControl>
                </Grid>
            </TabItem>
            <TabItem x:Name="ventanaPedidos" Header="Pedidos" Margin="0,-2,0,2">
                <Grid Background="#FFF4F7F6">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Panel de filtros en matriz 2x4 -->
                    <Grid Grid.Row="0" Margin="10,10,10,25">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Fila 1 -->
                        <Border Grid.Row="0" Grid.Column="0" Background="White" BorderBrush="#DCDCDC" BorderThickness="1" CornerRadius="15" Padding="20,8" Margin="0,0,20,20">
                            <TextBlock Text="Fecha" Foreground="#333333" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>

                        <DatePicker x:Name="dtpFechaPedidos" Grid.Row="0" Grid.Column="1" Height="36" Width="200" Margin="0,0,35,20" VerticalAlignment="Center" SelectedDateChanged="filtrar_changed"/>

                        <Border Grid.Row="0" Grid.Column="2" Background="White" BorderBrush="#DCDCDC" BorderThickness="1" CornerRadius="15" Padding="20,8" Margin="0,0,20,20">
                            <TextBlock Text="Cliente" Foreground="#333333" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>

                        <TextBox x:Name="txtClientePedidos" Grid.Row="0" Grid.Column="3" Height="36" Width="200" FontSize="14" BorderBrush="#DCDCDC" BorderThickness="1" Margin="0,0,0,20" VerticalAlignment="Center" Padding="10,0" TextChanged="filtrar_changed"/>

                        <!-- Fila 2 -->
                        <Border Grid.Row="1" Grid.Column="0" Background="White" BorderBrush="#DCDCDC" BorderThickness="1" CornerRadius="15" Padding="20,8" Margin="0,0,20,0">
                            <TextBlock Text="Estado" Foreground="#333333" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>

                        <ComboBox x:Name="cmbxEstadoPedido" Grid.Row="1" Grid.Column="1" Width="200" Height="36" Margin="0,0,35,0" VerticalAlignment="Center" SelectionChanged="filtrar_changed">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock>
                                        <Run Text="{Binding estado}"/>
                                        <Run Text=" "/>
                                        <Run Text="&#x25CF;" Foreground="{Binding colorCirculo}"/>
                                    </TextBlock>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>

                        <Border Grid.Row="1" Grid.Column="2" Background="White" BorderBrush="#DCDCDC" BorderThickness="1" CornerRadius="15" Padding="20,8" Margin="0,0,20,0">
                            <TextBlock Text="Tipo de Entrega" Foreground="#333333" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>

                        <ComboBox x:Name="cmbxTipoEntrega" Grid.Row="1" Grid.Column="3" Width="200" Height="36" VerticalAlignment="Center" SelectionChanged="filtrar_changed">
                            <ComboBoxItem Content="🍽 Para tomar aquí"/>
                            <ComboBoxItem Content="🛍 Para recoger"/>
                            <ComboBoxItem Content="🏠 A Domicilio"/>
                        </ComboBox>
                    </Grid>

                    <!-- Grid de tarjetas de pedidos -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="10,0,10,10">
                        <WrapPanel Orientation="Horizontal">

                            <!-- ItemsControl para generar tarjetas de pedidos dinámicamente -->
                            <ItemsControl x:Name="itemsPedidos">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Width="320" Height="330" Margin="10" CornerRadius="10" BorderThickness="0" Background="{Binding ColorEstado}" Opacity="0.85">
                                            <Border.Effect>
                                                <DropShadowEffect Color="#CCCCCC" BlurRadius="15" ShadowDepth="3" Opacity="0.5"/>
                                            </Border.Effect>
                                            <Grid Margin="15">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <!-- Header -->
                                                <StackPanel Grid.Row="0">
                                                    <TextBlock FontWeight="Bold" FontSize="18" Foreground="{Binding ColorTexto}">
                                                        <Run Text="Pedido "/><Run Text="{Binding NumeroPedido, Mode=OneWay}"/>
                                                    </TextBlock>
                                                    <TextBlock Text="{Binding FechaFormateada, Mode=OneWay}" FontSize="12" Foreground="{Binding ColorTexto}" Opacity="0.9" Margin="0,2,0,0"/>
                                                    <Separator Background="{Binding ColorTexto}" Opacity="0.3" Margin="0,8,0,8"/>
                                                </StackPanel>

                                                <!-- Contenido -->
                                                <StackPanel Grid.Row="1">
                                                    <TextBlock FontSize="13" Foreground="{Binding ColorTexto}" FontWeight="SemiBold" Margin="0,0,0,5">
                                                        <Run Text="{Binding IconoEntrega, Mode=OneWay}"/><Run Text=" "/><Run Text="{Binding TipoEntrega, Mode=OneWay}"/>
                                                    </TextBlock>
                                                    <TextBlock FontSize="12" Foreground="{Binding ColorTexto}" Margin="0,0,0,3">
                                                        <Run Text="⏰ Recogida/Entrega: "/><Run Text="{Binding HoraEntrega, Mode=OneWay}"/>
                                                    </TextBlock>
                                                    <TextBlock FontSize="11" Foreground="{Binding ColorTexto}" Margin="0,0,0,8">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                                <Setter Property="Text">
                                                                    <Setter.Value>
                                                                        <MultiBinding StringFormat="📍 {0}">
                                                                            <Binding Path="Direccion" Mode="OneWay"/>
                                                                        </MultiBinding>
                                                                    </Setter.Value>
                                                                </Setter>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Direccion}" Value="">
                                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>

                                                    <TextBlock Text="👤 Cliente:" FontSize="12" Foreground="{Binding ColorTexto}" FontWeight="SemiBold" Margin="0,0,0,2"/>
                                                    <TextBlock Text="{Binding NombreCliente, Mode=OneWay}" FontSize="12" Foreground="{Binding ColorTexto}" Margin="0,0,0,8"/>

                                                    <TextBlock Text="🛒 Productos:" FontSize="12" Foreground="{Binding ColorTexto}" FontWeight="SemiBold" Margin="0,0,0,2"/>
                                                    <ItemsControl ItemsSource="{Binding Productos}" Margin="0,0,0,8">
                                                        <ItemsControl.ItemTemplate>
                                                            <DataTemplate>
                                                                <TextBlock FontSize="11" Margin="0,0,0,1">
                                                                    <TextBlock.Foreground>
                                                                        <Binding Path="DataContext.ColorTexto" RelativeSource="{RelativeSource AncestorType={x:Type Border}}" Mode="OneWay"/>
                                                                    </TextBlock.Foreground>
                                                                    <Run Text="• "/><Run Text="{Binding Mode=OneWay}"/>
                                                                </TextBlock>
                                                            </DataTemplate>
                                                        </ItemsControl.ItemTemplate>
                                                    </ItemsControl>

                                                    <TextBlock FontSize="12" Foreground="{Binding ColorTexto}" FontWeight="SemiBold">
                                                        <Run Text="{Binding IconoPago, Mode=OneWay}"/><Run Text=" "/><Run Text="{Binding MetodoPago, Mode=OneWay}"/>
                                                    </TextBlock>
                                                </StackPanel>

                                                <!-- Footer -->
                                                <StackPanel Grid.Row="2">
                                                    <Separator Background="{Binding ColorTexto}" Opacity="0.3" Margin="0,8,0,8"/>
                                                    <Grid>
                                                        <TextBlock Text="TOTAL" FontSize="14" FontWeight="Bold" Foreground="{Binding ColorTexto}" VerticalAlignment="Center"/>
                                                        <TextBlock Text="{Binding TotalFormateado, Mode=OneWay}" FontSize="18" FontWeight="Bold" Foreground="{Binding ColorTexto}" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                                    </Grid>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                        </WrapPanel>
                    </ScrollViewer>

                    <Button x:Name="btnLimpiarBusqueda" Content="LIMPIAR" Height="55" Background="{StaticResource PrimaryColor}" Foreground="White" FontSize="18" FontWeight="Bold" BorderThickness="0" Cursor="Hand" Margin="731,29,29,44" Click="btnLimpiarBusqueda_Click">
                        <Button.Effect>
                            <DropShadowEffect Color="#FF6F00" BlurRadius="15" ShadowDepth="5" Opacity="0.3"/>
                        </Button.Effect>
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="8"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </Grid>
            </TabItem>
            <TabItem x:Name="ventanaClientes" Header="Clientes">
                <Grid Background="#FFF4F7F6" Margin="10">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <WrapPanel Orientation="Horizontal">
                            <!-- ItemsControl para generar tarjetas de clientes dinámicamente -->
                            <ItemsControl x:Name="itemsClientes">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource ProductCardStyle}" Height="200">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>
                                                <Grid Grid.Row="0" Margin="15">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="90"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Border Grid.Column="0" CornerRadius="8" Background="#F0F0F0">
                                                        <TextBlock Text="👤" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                    <StackPanel Grid.Column="1" Margin="15,0,0,0">
                                                        <TextBlock Text="{Binding Nombre}" FontWeight="Bold" FontSize="16" TextWrapping="Wrap" Foreground="{StaticResource DarkText}"/>
                                                        <TextBlock FontSize="10" Foreground="{StaticResource LightText}" TextWrapping="Wrap" Margin="0,2,0,0">
                                                            <Run Text="📍 "/><Run Text="{Binding Direccion}"/>
                                                        </TextBlock>
                                                        <TextBlock FontSize="10" Foreground="{StaticResource LightText}" TextWrapping="Wrap" Margin="0,1,0,0">
                                                            <Run Text="📞 "/><Run Text="{Binding Telefono}"/>
                                                        </TextBlock>
                                                        <TextBlock FontSize="9" Foreground="{StaticResource LightText}" TextWrapping="Wrap" Margin="0,1,0,0">
                                                            <Run Text="📧 "/><Run Text="{Binding Email}"/>
                                                        </TextBlock>
                                                        <!-- Alergias -->
                                                        <ItemsControl ItemsSource="{Binding Alergias}" Margin="0,4,0,0">
                                                            <ItemsControl.ItemsPanel>
                                                                <ItemsPanelTemplate>
                                                                    <WrapPanel/>
                                                                </ItemsPanelTemplate>
                                                            </ItemsControl.ItemsPanel>
                                                            <ItemsControl.ItemTemplate>
                                                                <DataTemplate>
                                                                    <Border Background="#FFEBEE" CornerRadius="3" Padding="3,1" Margin="0,0,3,2">
                                                                        <TextBlock Text="{Binding}" FontSize="8" Foreground="#D32F2F"/>
                                                                    </Border>
                                                                </DataTemplate>
                                                            </ItemsControl.ItemTemplate>
                                                        </ItemsControl>
                                                    </StackPanel>
                                                </Grid>
                                                <Grid Grid.Row="1" Margin="15,0,15,15">
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                                        <Button Content="👁️" Style="{StaticResource ActionIconButtonStyle}" Foreground="#757575" ToolTip="Ver/Editar cliente" Tag="{Binding}" Click="btnVisualizarCliente_Click"/>
                                                        <Button Content="🗑️" Style="{StaticResource ActionIconButtonStyle}" Foreground="#D32F2F" ToolTip="Eliminar cliente" Tag="{Binding}" Click="btnEliminarCliente_Click"/>
                                                    </StackPanel>
                                                </Grid>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- Botón añadir cliente -->
                            <Button Width="240" Height="200" Margin="10" Background="White" BorderBrush="#DDDDDD" Cursor="Hand" ToolTip="Añadir nuevo cliente" Click="btnAñadirCliente_Click">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Grid>
                                            <Rectangle Stroke="{TemplateBinding BorderBrush}" StrokeThickness="2" StrokeDashArray="4 4" RadiusX="10" RadiusY="10" Fill="{TemplateBinding Background}"/>
                                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                                <TextBlock Text="+" FontSize="40" Foreground="#AAAAAA" HorizontalAlignment="Center"/>
                                                <TextBlock Text="Añadir Cliente" FontSize="14" Foreground="#AAAAAA" FontWeight="SemiBold" Margin="0,5,0,0"/>
                                            </StackPanel>
                                        </Grid>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </WrapPanel>
                    </ScrollViewer>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
