
<Window x:Class="TPV_Hosteleria.Home"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TPV_Hosteleria"
        mc:Ignorable="d"
        Title="Home" Height="768" Width="1024"
        WindowState="Maximized"
        Background="#F4F7F6">

    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryColor" Color="#FF6F00"/>
        <SolidColorBrush x:Key="AccentColor" Color="#0078D7"/>
        <SolidColorBrush x:Key="DarkText" Color="#333333"/>
        <SolidColorBrush x:Key="LightText" Color="#777777"/>
        <SolidColorBrush x:Key="CardBackground" Color="White"/>

        <!-- Estilo para el TabControl (Ocultar borde y fondo) -->
        <Style TargetType="TabControl">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
        </Style>

        <!-- Estilo para los TabItems (Pestañas de Categorías) -->
        <Style TargetType="TabItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="border" Background="Transparent" 
                                BorderBrush="Transparent" BorderThickness="0,0,0,3" 
                                Padding="20,10" Margin="0,0,5,0" Cursor="Hand">
                            <ContentPresenter x:Name="content" 
                                              ContentSource="Header" 
                                              HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"
                                              TextElement.Foreground="{StaticResource LightText}"
                                              TextElement.FontSize="16"
                                              TextElement.FontWeight="Bold"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource PrimaryColor}"/>
                                <Setter TargetName="content" Property="TextElement.Foreground" Value="{StaticResource PrimaryColor}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="content" Property="TextElement.Foreground" Value="{StaticResource PrimaryColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo sub-categoría -->
        <Style x:Key="SubCatButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="{StaticResource DarkText}"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="20" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource PrimaryColor}"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderBrush" Value="{StaticResource PrimaryColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para tarjeta producto -->
        <Style x:Key="ProductCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBackground}"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Width" Value="240"/>
            <Setter Property="Height" Value="160"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#CCCCCC" BlurRadius="15" ShadowDepth="3" Opacity="0.4"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo botón de acción (Editar/Borrar) -->
        <Style x:Key="ActionIconButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#EEEEEE"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo botón menú superior -->
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="{StaticResource DarkText}"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,20,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" Padding="10,5" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="{StaticResource PrimaryColor}"/>
                                <Setter Property="Background" Value="#FFF0E0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Grid Background="#FFF4F7F6">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="1.2*"/>
        </Grid.ColumnDefinitions>

        <!-- Zona izquierda: productos, pedidos y clientes -->
        <Grid Grid.Column="0" Margin="10,10,10,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
        </Grid>

        <!-- Zona derecha: ticket y pago -->
        <Border Grid.Column="1" Background="White">
            <Border.Effect>
                <DropShadowEffect Color="#000000" Direction="180" ShadowDepth="5" BlurRadius="20" Opacity="0.05"/>
            </Border.Effect>

            <Grid Margin="25">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header ticket -->
                <StackPanel Grid.Row="0" Margin="0,0,0,15">
                    <Grid>
                        <StackPanel>
                            <TextBlock x:Name="txtNombreUsuario" Text="Hola, Usuario" FontWeight="Bold" FontSize="16" Foreground="{StaticResource DarkText}"/>
                            <TextBlock x:Name="txtUltimoAcceso" Text="Fecha Acceso" FontSize="12" Foreground="{StaticResource LightText}"/>
                        </StackPanel>
                        <Button x:Name="btnAyuda" Content="?" Width="30" Height="30" HorizontalAlignment="Right" Background="#F5F5F5" BorderThickness="0" Foreground="{StaticResource DarkText}" FontWeight="Bold" Cursor="Hand" Click="btnAyuda_Click">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="15"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                    </Grid>
                    <Separator Margin="0,15" Background="#EEEEEE"/>
                    <TextBlock Text="Pedido Actual #1024" FontWeight="Bold" FontSize="18" Foreground="{StaticResource PrimaryColor}"/>
                </StackPanel>

                <!-- Lista ticket -->
                <ListView x:Name="lstTicket" Grid.Row="1" BorderThickness="0" Background="Transparent" Margin="-5,0">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Padding" Value="5,10"/>
                            <Setter Property="BorderBrush" Value="#EEEEEE"/>
                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        </Style>
                    </ListView.ItemContainerStyle>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Width="280">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Primera fila: cantidad, nombre y precio -->
                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="30"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="{Binding CantidadTexto}" FontWeight="Bold" Foreground="{StaticResource PrimaryColor}" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="1" Text="{Binding Nombre}" Foreground="{StaticResource DarkText}" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="2" Text="{Binding PrecioTotalTexto}" FontWeight="Bold" Foreground="{StaticResource DarkText}" VerticalAlignment="Center"/>
                                </Grid>

                                <!-- Segunda fila: botones de control -->
                                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,0,0">
                                    <Button Content="−" Width="25" Height="25" Background="#E0E0E0" Foreground="{StaticResource DarkText}" BorderThickness="0" FontWeight="Bold" FontSize="14" Cursor="Hand" Margin="0,0,5,0" ToolTip="Reducir cantidad" Tag="{Binding}" Click="btnRestarProducto_Click">
                                        <Button.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="4"/>
                                            </Style>
                                        </Button.Resources>
                                    </Button>
                                    <Button Content="+" Width="25" Height="25" Background="{StaticResource PrimaryColor}" Foreground="White" BorderThickness="0" FontWeight="Bold" FontSize="14" Cursor="Hand" ToolTip="Añadir unidad" Tag="{Binding}" Click="btnSumarProducto_Click">
                                        <Button.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="4"/>
                                            </Style>
                                        </Button.Resources>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <!-- Configuración -->
                <StackPanel Grid.Row="2" Margin="0,15">
                    <Label Content="Tipo de Entrega" FontSize="12" Foreground="{StaticResource LightText}"/>
                    <ComboBox Height="35" Padding="10,5" Margin="0,0,0,10" BorderBrush="#DDDDDD">
                        <ComboBoxItem Content="🍽️ Para tomar aquí"/>
                        <ComboBoxItem Content="🛒 Para recoger en el establecimiento"/>
                        <ComboBoxItem Content="🏠 A Domicilio (+3.00€)" IsSelected="True"/>
                    </ComboBox>

                    <Label Content="Cliente" FontSize="12" Foreground="{StaticResource LightText}"/>
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <ComboBox Height="35" Padding="10,5" BorderBrush="#DDDDDD">
                            <ComboBoxItem Content="Juan Pérez" IsSelected="True"/>
                        </ComboBox>
                        <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="5,0,0,0"/>
                    </Grid>

                    <TextBlock Text="📍 C/ Gran Vía, 24, Madrid" FontSize="12" Foreground="{StaticResource LightText}" Margin="5,0,0,10" FontStyle="Italic"/>

                    <Label Content="Método de Pago" FontSize="12" Foreground="{StaticResource LightText}"/>
                    <ComboBox Height="35" Padding="10,5" Margin="0,0,0,10" BorderBrush="#DDDDDD" SelectedIndex="1">
                        <ComboBoxItem Content="💶 Efectivo"/>
                        <ComboBoxItem Content="💳 Tarjeta"/>
                    </ComboBox>

                    <CheckBox Content="Canjear 150 puntos (-5.00€)" FontSize="13" Foreground="{StaticResource DarkText}" Margin="5,5,0,0"/>
                </StackPanel>

                <!-- Total y botón cobrar -->
                <StackPanel Grid.Row="3">
                    <Separator Background="#EEEEEE" Margin="0,0,0,15"/>
                    <Grid Margin="0,0,0,5">
                        <TextBlock Text="Subtotal" Foreground="{StaticResource LightText}"/>
                        <TextBlock Text="33.50 €" HorizontalAlignment="Right" Foreground="{StaticResource DarkText}"/>
                    </Grid>
                    <Grid Margin="0,0,0,5">
                        <TextBlock Text="Envío" Foreground="{StaticResource LightText}"/>
                        <TextBlock Text="+ 3.00 €" HorizontalAlignment="Right" Foreground="{StaticResource DarkText}"/>
                    </Grid>
                    <Grid Margin="0,0,0,15">
                        <TextBlock Text="TOTAL" FontSize="20" FontWeight="Bold" Foreground="{StaticResource DarkText}"/>
                        <TextBlock Text="36.50 €" FontSize="20" FontWeight="Bold" HorizontalAlignment="Right" Foreground="{StaticResource PrimaryColor}"/>
                    </Grid>

                    <Button Content="COBRAR" Height="55" Background="{StaticResource PrimaryColor}" Foreground="White" FontSize="18" FontWeight="Bold" BorderThickness="0" Cursor="Hand">
                        <Button.Effect>
                            <DropShadowEffect Color="#FF6F00" BlurRadius="15" ShadowDepth="5" Opacity="0.3"/>
                        </Button.Effect>
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="8"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>

            </Grid>
        </Border>
        <TabControl x:Name="tabContolHome" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10,10,10,10" BorderBrush="#FFF4F7F6" BorderThickness="0">
            <TabItem x:Name="ventanaProductos" Header="Productos">
                <Grid Background="#FFF4F7F6">
                    <TabControl Margin="0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">

                        <!-- Pestaña entrantes -->
                        <TabItem Header="Entrantes">
                            <Grid Margin="0,15,0,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <!-- Subcategorías de entrantes -->
                                <ScrollViewer Grid.Row="0" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Disabled" Margin="0,0,0,20">
                                    <TabControl>
                                        <TabItem Header="Ensaladas"/>
                                        <TabItem Header="Huevos"/>
                                        <TabItem Header="Arroces y Pastas"/>
                                        <TabItem Header="Asados"/>
                                        <TabItem Header="Pescados" />
                                    </TabControl>
                                </ScrollViewer>

                                <!-- Grid productos de entrantes -->
                                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="-10">
                                    <WrapPanel Orientation="Horizontal" Margin="10">

                                        <!-- Producto de ejemplo: ensalada -->
                                        <Border Style="{StaticResource ProductCardStyle}">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>
                                                <Grid Grid.Row="0" Margin="15">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="90"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Border Grid.Column="0" CornerRadius="8" Background="#F0F0F0">
                                                        <TextBlock Text="🥗" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                    <StackPanel Grid.Column="1" Margin="15,0,0,0">
                                                        <TextBlock Text="Ensalada César" FontWeight="Bold" FontSize="16" TextWrapping="Wrap" Foreground="{StaticResource DarkText}"/>
                                                        <TextBlock Text="Lechuga, pollo..." FontSize="11" Foreground="{StaticResource LightText}" TextWrapping="Wrap" Margin="0,5,0,0"/>
                                                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                                            <Border Background="#FFEBEE" CornerRadius="4" Padding="5,2" Margin="0,0,5,0">
                                                                <TextBlock Text="Gluten" FontSize="10" Foreground="#D32F2F"/>
                                                            </Border>
                                                        </StackPanel>
                                                    </StackPanel>
                                                </Grid>
                                                <Grid Grid.Row="1" Margin="15,0,15,15">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Text="9.50 €" FontSize="18" FontWeight="Bold" Foreground="{StaticResource PrimaryColor}" VerticalAlignment="Center"/>
                                                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                                                        <Button x:Name="btnEditarP1" Content="✏️" Style="{StaticResource ActionIconButtonStyle}" Foreground="#757575"/>
                                                        <Button x:Name="btnEliminarP1" Content="🗑️" Style="{StaticResource ActionIconButtonStyle}" Foreground="#D32F2F" Click="btnEliminarP1_Click"/>
                                                    </StackPanel>
                                                </Grid>
                                            </Grid>
                                        </Border>

                                        <!-- Producto de ejemplo: huevos -->
                                        <Border Style="{StaticResource ProductCardStyle}">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>
                                                <Grid Grid.Row="0" Margin="15">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="90"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Border Grid.Column="0" CornerRadius="8" Background="#F0F0F0">
                                                        <TextBlock Text="🍳" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                    <StackPanel Grid.Column="1" Margin="15,0,0,0">
                                                        <TextBlock Text="Huevos Rotos" FontWeight="Bold" FontSize="16" TextWrapping="Wrap" Foreground="{StaticResource DarkText}"/>
                                                        <TextBlock Text="Jamón y patatas" FontSize="11" Foreground="{StaticResource LightText}" TextWrapping="Wrap" Margin="0,5,0,0"/>
                                                    </StackPanel>
                                                </Grid>
                                                <Grid Grid.Row="1" Margin="15,0,15,15">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Text="12.00 €" FontSize="18" FontWeight="Bold" Foreground="{StaticResource PrimaryColor}" VerticalAlignment="Center"/>
                                                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                                                        <Button x:Name="btnEditarP2" Content="✏️" Style="{StaticResource ActionIconButtonStyle}" Foreground="#757575"/>
                                                        <Button x:Name="btnEliminarP2" Content="🗑️" Style="{StaticResource ActionIconButtonStyle}" Foreground="#D32F2F" Click="btnEliminarP2_Click"/>
                                                    </StackPanel>
                                                </Grid>
                                            </Grid>
                                        </Border>

                                        <!-- Botón añadir -->
                                        <Button Width="240" Height="160" Margin="10" Background="White" BorderBrush="#DDDDDD" Cursor="Hand">
                                            <Button.Template>
                                                <ControlTemplate TargetType="{x:Type Button}">
                                                    <Grid>
                                                        <Rectangle Stroke="{TemplateBinding BorderBrush}" StrokeThickness="2" StrokeDashArray="4 4" RadiusX="10" RadiusY="10" Fill="{TemplateBinding Background}"/>
                                                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                                            <TextBlock Text="+" FontSize="40" Foreground="#AAAAAA" HorizontalAlignment="Center"/>
                                                            <TextBlock Text="Añadir Producto" FontSize="14" Foreground="#AAAAAA" FontWeight="SemiBold" Margin="0,5,0,0"/>
                                                        </StackPanel>
                                                    </Grid>
                                                </ControlTemplate>
                                            </Button.Template>
                                        </Button>

                                    </WrapPanel>
                                </ScrollViewer>
                            </Grid>
                        </TabItem>

                        <!-- Pestaña platos -->
                        <TabItem Header="Platos">
                            <Grid Margin="0,15,0,0">
                                <TextBlock Text="Aquí irían los Platos principales..." FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#AAAAAA"/>
                            </Grid>
                        </TabItem>

                        <!-- Pestaña postres -->
                        <TabItem Header="Postres">
                            <Grid Margin="0,15,0,0">
                                <TextBlock Text="Aquí irían los Postres..." FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#AAAAAA"/>
                            </Grid>
                        </TabItem>

                        <!-- Pestaña bebidas -->
                        <TabItem Header="Bebidas">
                            <Grid Margin="0,15,0,0">
                                <TextBlock Text="Aquí irían las Bebidas..." FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#AAAAAA"/>
                            </Grid>
                        </TabItem>

                    </TabControl>
                </Grid>
            </TabItem>
            <TabItem x:Name="ventanaPedidos" Header="Pedidos">
                <Grid Background="#FFF4F7F6">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Margin="0,10,0,10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Button Content="Fecha" 
                                Grid.Row="0" Grid.Column="0"
                                Style="{StaticResource SubCatButtonStyle}"
                                Foreground="Black"/>

                        <DatePicker Grid.Row="0" Grid.Column="1" Margin="5,0"/>

                        <Button Content="Cliente" 
                                Grid.Row="0" Grid.Column="2"
                                Style="{StaticResource SubCatButtonStyle}"
                                Margin="10,0,0,0"/>

                        <TextBox x:Name="txtClientePedidos" Grid.Row="0" Grid.Column="3" Height="40" Width="120" FontSize="16" BorderBrush="Black" BorderThickness="1" Margin="5,0"/>

                        <Button Content="Estado" Grid.Row="1" Grid.Column="0" Style="{StaticResource SubCatButtonStyle}" Margin="0,10,10,0"/>
                        <ComboBox Width="60" Grid.Row="1" Grid.Column="1" Margin="0,10,0,0"/>
                        <Button Content="Tipo de Entrega" Grid.Row="1" Grid.Column="2" Style="{StaticResource SubCatButtonStyle}" Margin="0,10,10,0"/>
                        <ComboBox Grid.Row="1" Grid.Column="3" Margin="35,10,5,0">
                            <ComboBoxItem Content="Para tomar aquí"/>
                            <ComboBoxItem Content="Para recoger en el establecimiento"/>
                            <ComboBoxItem Content="A Domicilio" IsSelected="True"/>
                        </ComboBox>

                    </Grid>

                    <DataGrid Grid.Row="1" AutoGenerateColumns="False" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,10,0,0">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Número de Pedido" Width="*"/>
                            <DataGridTextColumn Header="Fecha y Hora" Width="*"/>
                            <DataGridTextColumn Header="Cliente" Width="*"/>
                            <DataGridTextColumn Header="Importe Total" Width="*"/>
                            <DataGridTextColumn Header="Estado" Width="*"/>
                            <DataGridTextColumn Header="Tipo de Entrega" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            <TabItem x:Name="ventanaClientes" Header="Clientes">
                <Grid Background="#FFF4F7F6" Margin="10">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <WrapPanel Orientation="Horizontal">
                            <!-- Tarjeta cliente: Alberto Cortés -->
                            <Border Style="{StaticResource ProductCardStyle}" Height="200">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid Grid.Row="0" Margin="15">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="90"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Border Grid.Column="0" CornerRadius="8" Background="#F0F0F0">
                                            <TextBlock Text="👤" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <StackPanel Grid.Column="1" Margin="15,0,0,0">
                                            <TextBlock Text="Alberto Cortés" FontWeight="Bold" FontSize="16" TextWrapping="Wrap" Foreground="{StaticResource DarkText}"/>
                                            <TextBlock Text="📍 C/Finlandia, 27" FontSize="10" Foreground="{StaticResource LightText}" TextWrapping="Wrap" Margin="0,2,0,0"/>
                                            <TextBlock Text="📞 606428412" FontSize="10" Foreground="{StaticResource LightText}" TextWrapping="Wrap" Margin="0,1,0,0"/>
                                            <TextBlock Text="📧 Alberto.Cortes1@alu.uclm.es" FontSize="9" Foreground="{StaticResource LightText}" TextWrapping="Wrap" Margin="0,1,0,0"/>
                                            <WrapPanel Margin="0,4,0,0">
                                                <Border Background="#FFEBEE" CornerRadius="3" Padding="3,1" Margin="0,0,3,2">
                                                    <TextBlock Text="Gluten" FontSize="8" Foreground="#D32F2F"/>
                                                </Border>
                                                <Border Background="#FFEBEE" CornerRadius="3" Padding="3,1" Margin="0,0,3,2">
                                                    <TextBlock Text="Lácteos" FontSize="8" Foreground="#D32F2F"/>
                                                </Border>
                                                <Border Background="#FFEBEE" CornerRadius="3" Padding="3,1" Margin="0,0,3,2">
                                                    <TextBlock Text="Frutos Secos" FontSize="8" Foreground="#D32F2F"/>
                                                </Border>
                                            </WrapPanel>
                                        </StackPanel>
                                    </Grid>
                                    <Grid Grid.Row="1" Margin="15,0,15,15">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
