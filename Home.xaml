<Window x:Class="TPV_Hosteleria.Home"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TPV_Hosteleria"
        mc:Ignorable="d"
        Title="Home" Height="768" Width="1229"
        WindowState="Maximized"
        Background="#F4F7F6">

    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryColor" Color="#FF6F00"/>
        <SolidColorBrush x:Key="AccentColor" Color="#0078D7"/>
        <SolidColorBrush x:Key="DarkText" Color="#333333"/>
        <SolidColorBrush x:Key="LightText" Color="#777777"/>
        <SolidColorBrush x:Key="CardBackground" Color="White"/>

        <!-- Estilo para el TabControl (Ocultar borde y fondo) -->
        <Style TargetType="TabControl">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
        </Style>

        <!-- Estilo para los TabItems (Pestañas de Categorías) -->
        <Style TargetType="TabItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="border" Background="Transparent" 
                                BorderBrush="Transparent" BorderThickness="0,0,0,3" 
                                Padding="20,10" Margin="0,0,5,0" Cursor="Hand">
                            <ContentPresenter x:Name="content" 
                                              ContentSource="Header" 
                                              HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"
                                              TextElement.Foreground="{StaticResource LightText}"
                                              TextElement.FontSize="16"
                                              TextElement.FontWeight="Bold"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource PrimaryColor}"/>
                                <Setter TargetName="content" Property="TextElement.Foreground" Value="{StaticResource PrimaryColor}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="content" Property="TextElement.Foreground" Value="{StaticResource PrimaryColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo Pills para Categorías principales (Entrantes, Platos, Postres, Bebidas) -->
        <Style x:Key="CategoryPillStyle" TargetType="TabItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="border" 
                                Background="White" 
                                BorderBrush="#DDDDDD"
                                BorderThickness="1" 
                                CornerRadius="25" 
                                Padding="25,12" 
                                Margin="0,0,15,0" 
                                Cursor="Hand">
                            <Border.Effect>
                                <DropShadowEffect Color="#CCCCCC" BlurRadius="0" ShadowDepth="0" Opacity="0"/>
                            </Border.Effect>
                            <ContentPresenter x:Name="content" 
                                            ContentSource="Header" 
                                            HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            TextElement.Foreground="{StaticResource DarkText}"
                                            TextElement.FontSize="15"
                                            TextElement.FontWeight="SemiBold"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource PrimaryColor}"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource PrimaryColor}"/>
                                <Setter TargetName="content" Property="TextElement.Foreground" Value="White"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#FF6F00" BlurRadius="12" ShadowDepth="3" Opacity="0.3"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FFF5E8"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource PrimaryColor}"/>
                                <Setter TargetName="content" Property="TextElement.Foreground" Value="{StaticResource PrimaryColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo Outline para Subcategorías (Ensaladas, Huevos, Arroces...) -->
        <Style x:Key="SubCategoryOutlineStyle" TargetType="TabItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="border" 
                                Background="Transparent" 
                                BorderBrush="#DDDDDD"
                                BorderThickness="2" 
                                CornerRadius="8" 
                                Padding="18,8" 
                                Margin="0,0,10,0" 
                                Cursor="Hand">
                            <ContentPresenter x:Name="content" 
                                            ContentSource="Header" 
                                            HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            TextElement.Foreground="{StaticResource DarkText}"
                                            TextElement.FontSize="13"
                                            TextElement.FontWeight="Medium"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Trigger para cuando NO está seleccionado pero está en hover -->
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                    <Condition Property="IsSelected" Value="False"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource PrimaryColor}"/>
                                <Setter TargetName="content" Property="TextElement.Foreground" Value="{StaticResource PrimaryColor}"/>
                            </MultiTrigger>

                            <!-- Trigger para cuando está seleccionado (siempre mantiene texto blanco) -->
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource PrimaryColor}"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource PrimaryColor}"/>
                                <Setter TargetName="content" Property="TextElement.Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo sub-categoría (mantener para otros usos) -->
        <Style x:Key="SubCatButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="{StaticResource DarkText}"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="20" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource PrimaryColor}"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderBrush" Value="{StaticResource PrimaryColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para tarjeta producto -->
        <Style x:Key="ProductCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBackground}"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Width" Value="240"/>
            <Setter Property="Height" Value="160"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#CCCCCC" BlurRadius="15" ShadowDepth="3" Opacity="0.4"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo botón de acción (Editar/Borrar) -->
        <Style x:Key="ActionIconButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#EEEEEE"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo botón menú superior -->
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="{StaticResource DarkText}"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,20,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" Padding="10,5" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="{StaticResource PrimaryColor}"/>
                                <Setter Property="Background" Value="#FFF0E0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para los botones de pago (efectivo/tarjeta) con efecto hover naranja -->
        <Style x:Key="BotonPagoStyle" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="{StaticResource DarkText}"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="#FF6F00" BlurRadius="15" ShadowDepth="0" Opacity="0.7"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

    </Window.Resources>

    <Grid Background="#FFF4F7F6">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="872*"/>
            <ColumnDefinition Width="13*"/>
            <ColumnDefinition Width="344*"/>
        </Grid.ColumnDefinitions>

        <!-- Zona izquierda: productos, pedidos y clientes -->
        <Grid Grid.Column="0" Margin="10,10,4,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
        </Grid>

        <!-- Zona derecha: ticket y pago -->
        <Border Grid.Column="2" Background="White">
            <Border.Effect>
                <DropShadowEffect Color="#000000" Direction="180" ShadowDepth="5" BlurRadius="20" Opacity="0.05"/>
            </Border.Effect>

            <Grid Margin="25">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header ticket -->
                <StackPanel Grid.Row="0" Margin="0,0,0,15">
                    <Grid>
                        <StackPanel>
                            <TextBlock x:Name="txtNombreUsuario" Text="Hola, Usuario" FontWeight="Bold" FontSize="16" Foreground="{StaticResource DarkText}"/>
                            <TextBlock x:Name="txtUltimoAcceso" Text="Fecha Acceso" FontSize="12" Foreground="{StaticResource LightText}"/>
                        </StackPanel>
                        <Button x:Name="btnAyuda" Content="?" Width="30" Height="30" HorizontalAlignment="Right" Background="#F5F5F5" BorderThickness="0" Foreground="{StaticResource DarkText}" FontWeight="Bold" Cursor="Hand" Click="btnAyuda_Click">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="15"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                    </Grid>
                    <Separator Margin="0,15" Background="#EEEEEE"/>
                    <TextBlock x:Name="txtPedido" Text="Pedido Actual #1024" FontWeight="Bold" FontSize="18" Foreground="{StaticResource PrimaryColor}"/>
                </StackPanel>

                <!-- Lista ticket -->
                <ListView x:Name="lstTicket" Grid.Row="1" BorderThickness="0" Background="Transparent" Margin="-5,0">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Padding" Value="5,10"/>
                            <Setter Property="BorderBrush" Value="#EEEEEE"/>
                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        </Style>
                    </ListView.ItemContainerStyle>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Width="280">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Primera fila: cantidad, nombre y precio -->
                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="30"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="{Binding CantidadTexto}" FontWeight="Bold" Foreground="{StaticResource PrimaryColor}" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="1" Text="{Binding Nombre}" Foreground="{StaticResource DarkText}" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="2" Text="{Binding PrecioTotalTexto}" FontWeight="Bold" Foreground="{StaticResource DarkText}" VerticalAlignment="Center"/>
                                </Grid>

                                <!-- Segunda fila: botones de control -->
                                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,0,0">
                                    <Button Content="−" Width="25" Height="25" Background="#E0E0E0" Foreground="{StaticResource DarkText}" BorderThickness="0" FontWeight="Bold" FontSize="14" Cursor="Hand" Margin="0,0,5,0" ToolTip="Reducir cantidad" Tag="{Binding}" Click="btnRestarProducto_Click">
                                        <Button.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="4"/>
                                            </Style>
                                        </Button.Resources>
                                    </Button>
                                    <Button Content="+" Width="25" Height="25" Background="{StaticResource PrimaryColor}" Foreground="White" BorderThickness="0" FontWeight="Bold" FontSize="14" Cursor="Hand" ToolTip="Añadir unidad" Tag="{Binding}" Click="btnSumarProducto_Click">
                                        <Button.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="4"/>
                                            </Style>
                                        </Button.Resources>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <!-- Configuración -->
                <StackPanel Grid.Row="2" Margin="0,15">
                    <Label Content="Tipo de Entrega" FontSize="12" Foreground="{StaticResource LightText}"/>
                    <RadioButton x:Name="rbTomarAqui" Content="🍽️ Para tomar aquí" Checked="rbTomarAqui_Checked" FontSize="12"/>
                    <RadioButton x:Name="rbRecoger" Content="🛍️ Para recoger en el establecimiento" Checked="rbRecoger_Checked" FontSize="12"/>
                    <RadioButton x:Name="rbDomicilio" Content="🏠 A Domicilio (+3,00€)" Checked="rbDomicilio_Checked" FontSize="12" Unchecked="rbDomicilio_Unchecked"/>
                    <Label Content="Cliente" FontSize="12" Foreground="{StaticResource LightText}"/>
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="txtClientes" Height="45" FontSize="16" Padding="10" VerticalContentAlignment="Center" BorderBrush="#DDDDDD" BorderThickness="2" KeyDown="txtClientes_KeyDown"/>
                    </Grid>

                    <Label Content="Método de Pago" FontSize="12" Foreground="{StaticResource LightText}"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Button x:Name="btnEfectivo" Content="💶 Efectivo" Grid.Column="0" HorizontalAlignment="Stretch" Margin="0,0,5,0" Height="36" Style="{StaticResource BotonPagoStyle}" Click="btnEfectivo_Click"/>
                        <Button x:Name="btnTarjeta" Content="💳 Tarjeta" Grid.Column="1" HorizontalAlignment="Stretch" Margin="5,0,0,0" Height="36" Style="{StaticResource BotonPagoStyle}" Click="btnTarjeta_Click"/>
                    </Grid>
                    <CheckBox x:Name ="cbPuntos" Content="Canjear puntos (Envio a Domicilio Gratuito)" FontSize="13" Foreground="{StaticResource DarkText}" Margin="5,5,0,0" IsEnabled="False" Checked="cbPuntos_Checked" Unchecked="cbPuntos_Unchecked"/>
                </StackPanel>

                <!-- Total y botón cobrar -->
                <StackPanel Grid.Row="3">
                    <Separator Background="#EEEEEE" Margin="0,0,0,15"/>
                    <Grid Margin="0,0,0,5">
                        <TextBlock Text="Subtotal" Foreground="{StaticResource LightText}"/>
                        <TextBlock x:Name ="txtPrecioSubTotal" Text="0,00 €" HorizontalAlignment="Right" Foreground="{StaticResource DarkText}"/>
                    </Grid>
                    <Grid Margin="0,0,0,5">
                        <TextBlock x:Name="txtEnvio" Text="Envío" Foreground="{StaticResource LightText}" Visibility="Hidden"/>
                        <TextBlock x:Name ="txtPrecioEnvio" Text="+ 3,00 €" HorizontalAlignment="Right" Foreground="{StaticResource DarkText}" Visibility="Hidden"/>
                    </Grid>
                    <Grid Margin="0,0,0,5">
                        <TextBlock x:Name="txtDescuentoPuntos" Text="Descuento Puntos" Foreground="{StaticResource LightText}" Visibility="Hidden"/>
                        <TextBlock x:Name="txtPrecioDescuentoPuntos" Text="- 3,00 €" HorizontalAlignment="Right" Foreground="{StaticResource DarkText}" Visibility="Hidden"/>
                    </Grid>
                    <Grid Margin="0,0,0,15">
                        <TextBlock Text="TOTAL" FontSize="20" FontWeight="Bold" Foreground="{StaticResource DarkText}"/>
                        <TextBlock x:Name ="txtPrecioTotalTicket" Text="0,00 €" FontSize="20" FontWeight="Bold" HorizontalAlignment="Right" Foreground="{StaticResource PrimaryColor}"/>
                    </Grid>

                    <Button x:Name="btnCobrar" Content="COBRAR" Height="55" Background="{StaticResource PrimaryColor}" Foreground="White" FontSize="18" FontWeight="Bold" BorderThickness="0" Cursor="Hand" Click="btnCobrar_click">
                        <Button.Effect>
                            <DropShadowEffect Color="#FF6F00" BlurRadius="15" ShadowDepth="5" Opacity="0.3"/>
                        </Button.Effect>
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="8"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>

            </Grid>
        </Border>
        <TabControl x:Name="tabContolHome" Margin="10,10,4,10" BorderBrush="#FFF4F7F6" BorderThickness="0">
            <TabItem x:Name="ventanaProductos" Header="Productos">
                <Grid Background="#FFF4F7F6">
                    <TabControl Margin="0,10,0,0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Background="Transparent" BorderThickness="0">
                        <TabControl.Resources>
                            <Style TargetType="TabItem" BasedOn="{StaticResource CategoryPillStyle}"/>
                        </TabControl.Resources>

                        <!-- Pestaña entrantes -->
                        <TabItem Header="🥗 Entrantes">
                            <Grid Margin="0,15,0,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <!-- Subcategorías de entrantes -->
                                <TabControl x:Name="tabSubcategorias" Grid.Row="0" Background="Transparent" BorderThickness="0" Margin="0,0,0,20">
                                    <TabControl.Resources>
                                        <Style TargetType="TabItem" BasedOn="{StaticResource SubCategoryOutlineStyle}"/>
                                    </TabControl.Resources>

                                    <TabItem Header="Ensaladas" IsSelected="True">
                                        <!-- Grid productos de Ensaladas -->
                                        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="-10">
                                            <WrapPanel Orientation="Horizontal" Margin="10">

                                                <!-- ItemsControl para generar tarjetas de productos dinámicamente -->
                                                <ItemsControl x:Name="itemsEnsaladas">
                                                    <ItemsControl.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <WrapPanel Orientation="Horizontal"/>
                                                        </ItemsPanelTemplate>
                                                    </ItemsControl.ItemsPanel>
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Border Style="{StaticResource ProductCardStyle}">
                                                                <Grid>
                                                                    <Grid.RowDefinitions>
                                                                        <RowDefinition Height="*"/>
                                                                        <RowDefinition Height="Auto"/>
                                                                    </Grid.RowDefinitions>
                                                                    <Grid Grid.Row="0" Margin="15">
                                                                        <Grid.ColumnDefinitions>
                                                                            <ColumnDefinition Width="90"/>
                                                                            <ColumnDefinition Width="*"/>
                                                                        </Grid.ColumnDefinitions>
                                                                        <Border Grid.Column="0" CornerRadius="8" Background="#F0F0F0">
                                                                            <Image Source="{Binding RutaImagen}" Width="80" Height="80" Stretch="UniformToFill" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                        </Border>
                                                                        <StackPanel Grid.Column="1" Margin="15,0,0,0">
                                                                            <TextBlock Text="{Binding Nombre}" FontWeight="Bold" FontSize="16" TextWrapping="Wrap" Foreground="{StaticResource DarkText}"/>
                                                                            <TextBlock Text="{Binding Descripcion}" FontSize="11" Foreground="{StaticResource LightText}" TextWrapping="Wrap" Margin="0,5,0,0"/>
                                                                            <ItemsControl ItemsSource="{Binding Alergenos}" Margin="0,8,0,0">
                                                                                <ItemsControl.ItemsPanel>
                                                                                    <ItemsPanelTemplate>
                                                                                        <StackPanel Orientation="Horizontal"/>
                                                                                    </ItemsPanelTemplate>
                                                                                </ItemsControl.ItemsPanel>
                                                                                <ItemsControl.ItemTemplate>
                                                                                    <DataTemplate>
                                                                                        <Border Background="#FFEBEE" CornerRadius="4" Padding="5,2" Margin="0,0,5,0">
                                                                                            <TextBlock Text="{Binding}" FontSize="10" Foreground="#D32F2F"/>
                                                                                        </Border>
                                                                                    </DataTemplate>
                                                                                </ItemsControl.ItemTemplate>
                                                                            </ItemsControl>
                                                                        </StackPanel>
                                                                    </Grid>
                                                                    <Grid Grid.Row="1" Margin="15,0,15,15">
                                                                        <Grid.ColumnDefinitions>
                                                                            <ColumnDefinition Width="Auto"/>
                                                                            <ColumnDefinition Width="*"/>
                                                                        </Grid.ColumnDefinitions>
                                                                        <TextBlock Text="{Binding PrecioFormateado}" FontSize="18" FontWeight="Bold" Foreground="{StaticResource PrimaryColor}" VerticalAlignment="Center"/>
                                                                        <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                                                                            <Button Content="🛒" Style="{StaticResource ActionIconButtonStyle}" Foreground="#757575" Tag="{Binding}" Click="btnAñadirProducto_Click"/>
                                                                            <Button Content="👁️" Style="{StaticResource ActionIconButtonStyle}" Foreground="#757575" Tag="{Binding}" Click="btnVerProducto_Click"/>
                                                                            <Button Content="🗑️" Style="{StaticResource ActionIconButtonStyle}" Foreground="#D32F2F" Tag="{Binding}" Click="btnEliminarProducto_Click"/>
                                                                        </StackPanel>
                                                                    </Grid>
                                                                </Grid>
                                                            </Border>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>

                                                <!-- Botón añadir -->
                                                <Button Width="240" Height="160" Margin="10" Background="White" BorderBrush="#DDDDDD" Cursor="Hand" Click="btnAñadirNuevoProducto_Click">
                                                    <Button.Template>
                                                        <ControlTemplate TargetType="{x:Type Button}">
                                                            <Grid>
                                                                <Rectangle Stroke="{TemplateBinding BorderBrush}" StrokeThickness="2" StrokeDashArray="4 4" RadiusX="10" RadiusY="10" Fill="{TemplateBinding Background}"/>
                                                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                                                    <TextBlock Text="+" FontSize="40" Foreground="#AAAAAA" HorizontalAlignment="Center"/>
                                                                    <TextBlock Text="Añadir Producto" FontSize="14" Foreground="#AAAAAA" FontWeight="SemiBold" Margin="0,5,0,0"/>
                                                                </StackPanel>
                                                            </Grid>
                                                        </ControlTemplate>
                                                    </Button.Template>
                                                </Button>

                                            </WrapPanel>
                                        </ScrollViewer>
                                    </TabItem>

                                    <TabItem Header="Huevos">
                                        <!-- Grid productos de Huevos -->
                                        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="-10">
                                            <WrapPanel Orientation="Horizontal" Margin="10">

                                                <!-- ItemsControl para generar tarjetas de productos dinámicamente -->
                                                <ItemsControl x:Name="itemsHuevos">
                                                    <ItemsControl.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <WrapPanel Orientation="Horizontal"/>
                                                        </ItemsPanelTemplate>
                                                    </ItemsControl.ItemsPanel>
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Border Style="{StaticResource ProductCardStyle}">
                                                                <Grid>
                                                                    <Grid.RowDefinitions>
                                                                        <RowDefinition Height="*"/>
                                                                        <RowDefinition Height="Auto"/>
                                                                    </Grid.RowDefinitions>
                                                                    <Grid Grid.Row="0" Margin="15">
