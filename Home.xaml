<Window x:Class="TPV_Hosteleria.Home"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TPV_Hosteleria"
        mc:Ignorable="d"
        Title="Home" Height="768" Width="1024"
        WindowState="Maximized"
        Background="#F4F7F6">

    <Window.Resources>
        <!-- COLORES -->
        <SolidColorBrush x:Key="PrimaryColor" Color="#FF6F00"/>
        <!-- Naranja Cálido -->
        <SolidColorBrush x:Key="AccentColor" Color="#0078D7"/>
        <!-- Azul Acento -->
        <SolidColorBrush x:Key="DarkText" Color="#333333"/>
        <SolidColorBrush x:Key="LightText" Color="#777777"/>
        <SolidColorBrush x:Key="CardBackground" Color="White"/>

        <!-- ESTILO BOTÓN CATEGORÍA (Menú Superior) -->
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="{StaticResource DarkText}"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,20,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" Padding="10,5" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="{StaticResource PrimaryColor}"/>
                                <Setter Property="Background" Value="#FFF0E0"/>
                                <!-- Naranja muy suave -->
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ESTILO PESTAÑA CATEGORÍA (Entrantes, Platos...) -->
        <Style x:Key="TabButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="{StaticResource LightText}"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                BorderBrush="Transparent" BorderThickness="0,0,0,3" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="{StaticResource PrimaryColor}"/>
                            </Trigger>
                            <!-- Simulación de seleccionado (puedes usar RadioButton en la lógica real) -->
                            <Trigger Property="Tag" Value="Selected">
                                <Setter Property="Foreground" Value="{StaticResource PrimaryColor}"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource PrimaryColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ESTILO SUB-CATEGORÍA (Ensaladas, Huevos...) -->
        <Style x:Key="SubCatButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="{StaticResource DarkText}"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="20" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource PrimaryColor}"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderBrush" Value="{StaticResource PrimaryColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ESTILO TARJETA PRODUCTO -->
        <Style x:Key="ProductCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBackground}"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Width" Value="240"/>
            <Setter Property="Height" Value="160"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#CCCCCC" BlurRadius="15" ShadowDepth="3" Opacity="0.4"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ESTILO BOTÓN ACCIÓN (Editar/Borrar) -->
        <Style x:Key="ActionIconButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#EEEEEE"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="1.2*"/>
            <!-- Un poco más ancho para el ticket -->
        </Grid.ColumnDefinitions>

        <!-- ========================================== -->
        <!-- ZONA IZQUIERDA: NAVEGACIÓN Y PRODUCTOS -->
        <!-- ========================================== -->
        <Grid Grid.Column="0" Margin="30,20,30,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Título y Menú -->
                <RowDefinition Height="Auto"/>
                <!-- Tabs Categorías -->
                <RowDefinition Height="Auto"/>
                <!-- Chips Subcategorías -->
                <RowDefinition Height="*"/>
                <!-- Grid Productos -->
            </Grid.RowDefinitions>

            <!-- 1. Cabecera y Navegación -->
            <Grid Grid.Row="0" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="{StaticResource PrimaryColor}" Width="40" Height="40" CornerRadius="10" Margin="0,0,10,0">
                        <TextBlock Text="TPV" Foreground="White" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="TPV Comida Casera" FontSize="20" FontWeight="Bold" Foreground="{StaticResource DarkText}" VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Home" Style="{StaticResource NavButtonStyle}" Foreground="{StaticResource PrimaryColor}"/>
                    <Button Content="Productos" Style="{StaticResource NavButtonStyle}"/>
                    <Button Content="Pedidos" Style="{StaticResource NavButtonStyle}"/>
                    <Button Content="Clientes" Style="{StaticResource NavButtonStyle}"/>
                </StackPanel>
            </Grid>

            <!-- 2. Pestañas Categorías -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,15">
                <Button Content="Entrantes" Style="{StaticResource TabButtonStyle}" Tag="Selected"/>
                <Button Content="Platos" Style="{StaticResource TabButtonStyle}"/>
                <Button Content="Postres" Style="{StaticResource TabButtonStyle}"/>
                <Button Content="Bebidas" Style="{StaticResource TabButtonStyle}"/>
            </StackPanel>

            <!-- 3. Subcategorías (Estilo Chips) -->
            <ScrollViewer Grid.Row="2" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Disabled" Margin="0,0,0,20">
                <StackPanel Orientation="Horizontal">
                    <Button Content="Ensaladas" Style="{StaticResource SubCatButtonStyle}" Background="{StaticResource PrimaryColor}" Foreground="White" BorderBrush="{StaticResource PrimaryColor}"/>
                    <Button Content="Huevos" Style="{StaticResource SubCatButtonStyle}"/>
                    <Button Content="Arroces y pastas" Style="{StaticResource SubCatButtonStyle}"/>
                    <Button Content="Asados" Style="{StaticResource SubCatButtonStyle}"/>
                    <Button Content="Pescados" Style="{StaticResource SubCatButtonStyle}"/>
                </StackPanel>
            </ScrollViewer>

            <!-- 4. Grid de Productos -->
            <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto" Margin="-10">
                <WrapPanel Orientation="Horizontal" Margin="10">

                    <!-- TARJETA 1: Ensalada -->
                    <Border Style="{StaticResource ProductCardStyle}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0" Margin="15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="90"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Foto -->
                                <Border Grid.Column="0" CornerRadius="8" Background="#F0F0F0">
                                    <TextBlock Text="🥗" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>

                                <!-- Info -->
                                <StackPanel Grid.Column="1" Margin="15,0,0,0">
                                    <TextBlock Text="Ensalada César" FontWeight="Bold" FontSize="16" TextWrapping="Wrap" Foreground="{StaticResource DarkText}"/>
                                    <TextBlock Text="Lechuga, pollo, picatostes..." FontSize="11" Foreground="{StaticResource LightText}" TextWrapping="Wrap" Margin="0,5,0,0"/>

                                    <!-- Alérgenos (Tags visuales) -->
                                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                        <Border Background="#FFEBEE" CornerRadius="4" Padding="5,2" Margin="0,0,5,0">
                                            <TextBlock Text="Gluten" FontSize="10" Foreground="#D32F2F"/>
                                        </Border>
                                        <Border Background="#E3F2FD" CornerRadius="4" Padding="5,2">
                                            <TextBlock Text="Lácteos" FontSize="10" Foreground="#1976D2"/>
                                        </Border>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>

                            <!-- Pie de Tarjeta -->
                            <Grid Grid.Row="1" Margin="15,0,15,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="9.50 €" FontSize="18" FontWeight="Bold" Foreground="{StaticResource PrimaryColor}" VerticalAlignment="Center"/>

                                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                                    <Button Content="✏️" Style="{StaticResource ActionIconButtonStyle}" Foreground="#757575"/>
                                    <Button Content="🗑️" Style="{StaticResource ActionIconButtonStyle}" Foreground="#D32F2F"/>
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </Border>

                    <!-- TARJETA 2: Huevos Rotos -->
                    <Border Style="{StaticResource ProductCardStyle}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0" Margin="15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="90"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Border Grid.Column="0" CornerRadius="8" Background="#F0F0F0">
                                    <TextBlock Text="🍳" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <StackPanel Grid.Column="1" Margin="15,0,0,0">
                                    <TextBlock Text="Huevos Rotos" FontWeight="Bold" FontSize="16" TextWrapping="Wrap" Foreground="{StaticResource DarkText}"/>
                                    <TextBlock Text="Huevos, patatas, jamón..." FontSize="11" Foreground="{StaticResource LightText}" TextWrapping="Wrap" Margin="0,5,0,0"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                        <Border Background="#FFF8E1" CornerRadius="4" Padding="5,2">
                                            <TextBlock Text="Huevo" FontSize="10" Foreground="#FFA000"/>
                                        </Border>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                            <Grid Grid.Row="1" Margin="15,0,15,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="12.00 €" FontSize="18" FontWeight="Bold" Foreground="{StaticResource PrimaryColor}" VerticalAlignment="Center"/>
                                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                                    <Button Content="✏️" Style="{StaticResource ActionIconButtonStyle}" Foreground="#757575"/>
                                    <Button Content="🗑️" Style="{StaticResource ActionIconButtonStyle}" Foreground="#D32F2F"/>
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </Border>

                    <!-- TARJETA AÑADIR (+): CORREGIDA -->
                    <Button Width="240" Height="160" Margin="10" Background="White" BorderBrush="#DDDDDD" Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Grid>
                                    <!-- Rectángulo con Borde Discontinuo (Dashed) -->
                                    <Rectangle Stroke="{TemplateBinding BorderBrush}"
                                               StrokeThickness="2"
                                               StrokeDashArray="4 4"
                                               RadiusX="10" RadiusY="10"
                                               Fill="{TemplateBinding Background}"/>
                                    <!-- Contenido -->
                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <TextBlock Text="+" FontSize="40" Foreground="#AAAAAA" HorizontalAlignment="Center"/>
                                        <TextBlock Text="Añadir Producto" FontSize="14" Foreground="#AAAAAA" FontWeight="SemiBold" Margin="0,5,0,0"/>
                                    </StackPanel>
                                </Grid>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                </WrapPanel>
            </ScrollViewer>
        </Grid>

        <!-- ========================================== -->
        <!-- ZONA DERECHA: TICKET Y PAGO (Blanco Puro) -->
        <!-- ========================================== -->
        <Border Grid.Column="1" Background="White">
            <Border.Effect>
                <DropShadowEffect Color="#000000" Direction="180" ShadowDepth="5" BlurRadius="20" Opacity="0.05"/>
            </Border.Effect>

            <Grid Margin="25">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Info Usuario -->
                    <RowDefinition Height="*"/>
                    <!-- Lista Ticket -->
                    <RowDefinition Height="Auto"/>
                    <!-- Configuración -->
                    <RowDefinition Height="Auto"/>
                    <!-- Total y Botón -->
                </Grid.RowDefinitions>

                <!-- 1. Header Ticket -->
                <StackPanel Grid.Row="0" Margin="0,0,0,15">
                    <Grid>
                        <StackPanel>
                            <TextBlock Text="Hola, Alberto" FontWeight="Bold" FontSize="16" Foreground="{StaticResource DarkText}"/>
                            <TextBlock Text="17/11/2025 14:30" FontSize="12" Foreground="{StaticResource LightText}"/>
                        </StackPanel>
                        <Button Content="?" Width="30" Height="30" HorizontalAlignment="Right" Background="#F5F5F5" BorderThickness="0" Foreground="{StaticResource DarkText}" FontWeight="Bold" Cursor="Hand">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="15"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                    </Grid>
                    <Separator Margin="0,15" Background="#EEEEEE"/>
                    <TextBlock Text="Pedido Actual #1024" FontWeight="Bold" FontSize="18" Foreground="{StaticResource PrimaryColor}"/>
                </StackPanel>

                <!-- 2. Lista Ticket -->
                <ListView Grid.Row="1" BorderThickness="0" Background="Transparent" Margin="-5,0">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Padding" Value="5,10"/>
                            <Setter Property="BorderBrush" Value="#EEEEEE"/>
                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        </Style>
                    </ListView.ItemContainerStyle>
                    <!-- Items de ejemplo -->
                    <ListViewItem>
                        <Grid Width="280">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="30"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="1x" FontWeight="Bold" Foreground="{StaticResource PrimaryColor}"/>
                            <TextBlock Grid.Column="1" Text="Ensalada César" Foreground="{StaticResource DarkText}"/>
                            <TextBlock Grid.Column="2" Text="9.50 €" FontWeight="Bold" Foreground="{StaticResource DarkText}"/>
                        </Grid>
                    </ListViewItem>
                    <ListViewItem>
                        <Grid Width="280">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="30"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="2x" FontWeight="Bold" Foreground="{StaticResource PrimaryColor}"/>
                            <TextBlock Grid.Column="1" Text="Huevos Rotos" Foreground="{StaticResource DarkText}"/>
                            <TextBlock Grid.Column="2" Text="24.00 €" FontWeight="Bold" Foreground="{StaticResource DarkText}"/>
                        </Grid>
                    </ListViewItem>
                </ListView>

                <!-- 3. Configuración -->
                <StackPanel Grid.Row="2" Margin="0,15">
                    <!-- Entrega -->
                    <Label Content="Tipo de Entrega" FontSize="12" Foreground="{StaticResource LightText}"/>
                    <ComboBox Height="35" Padding="10,5" Margin="0,0,0,10" BorderBrush="#DDDDDD">
                        <ComboBoxItem Content="🍽️  Para tomar aquí"/>
                        <ComboBoxItem Content="🏠  A Domicilio (+3.00€)" IsSelected="True"/>
                    </ComboBox>

                    <!-- Cliente -->
                    <Label Content="Cliente" FontSize="12" Foreground="{StaticResource LightText}"/>
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <ComboBox Height="35" Padding="10,5" BorderBrush="#DDDDDD">
                            <ComboBoxItem Content="Juan Pérez" IsSelected="True"/>
                        </ComboBox>
                        <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="5,0,0,0">
                            <Button Content="+" Width="35" Height="35" Background="{StaticResource PrimaryColor}" Foreground="White" BorderThickness="0" FontWeight="Bold" FontSize="16" Cursor="Hand">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="5"/>
                                    </Style>
                                </Button.Resources>
                            </Button>
                        </StackPanel>
                    </Grid>

                    <TextBlock Text="📍 C/ Gran Vía, 24, Madrid" FontSize="12" Foreground="{StaticResource LightText}" Margin="5,0,0,10" FontStyle="Italic"/>

                    <!-- Pago -->
                    <Label Content="Método de Pago" FontSize="12" Foreground="{StaticResource LightText}"/>
                    <ComboBox Height="35" Padding="10,5" Margin="0,0,0,10" BorderBrush="#DDDDDD" SelectedIndex="1">
                        <ComboBoxItem Content="💶 Efectivo"/>
                        <ComboBoxItem Content="💳 Tarjeta"/>
                    </ComboBox>

                    <!-- Puntos -->
                    <CheckBox Content="Canjear 150 puntos (-5.00€)" FontSize="13" Foreground="{StaticResource DarkText}" Margin="5,5,0,0"/>
                </StackPanel>

                <!-- 4. Total y Botón Final -->
                <StackPanel Grid.Row="3">
                    <Separator Background="#EEEEEE" Margin="0,0,0,15"/>

                    <Grid Margin="0,0,0,5">
                        <TextBlock Text="Subtotal" Foreground="{StaticResource LightText}"/>
                        <TextBlock Text="33.50 €" HorizontalAlignment="Right" Foreground="{StaticResource DarkText}"/>
                    </Grid>
                    <Grid Margin="0,0,0,5">
                        <TextBlock Text="Envío" Foreground="{StaticResource LightText}"/>
                        <TextBlock Text="+ 3.00 €" HorizontalAlignment="Right" Foreground="{StaticResource DarkText}"/>
                    </Grid>
                    <Grid Margin="0,0,0,15">
                        <TextBlock Text="TOTAL" FontSize="20" FontWeight="Bold" Foreground="{StaticResource DarkText}"/>
                        <TextBlock Text="36.50 €" FontSize="20" FontWeight="Bold" HorizontalAlignment="Right" Foreground="{StaticResource PrimaryColor}"/>
                    </Grid>

                    <Button Content="COBRAR" Height="55" Background="{StaticResource PrimaryColor}" Foreground="White" FontSize="18" FontWeight="Bold" BorderThickness="0" Cursor="Hand">
                        <Button.Effect>
                            <DropShadowEffect Color="#FF6F00" BlurRadius="15" ShadowDepth="5" Opacity="0.3"/>
                        </Button.Effect>
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="8"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>

            </Grid>
        </Border>
    </Grid>
</Window>